---
/**
 * FormPageLayout
 *
 * Shared layout for form-focused pages (/build, /hire, etc.).
 * Provides logo (top-left) and fp-page wrapper. No footer â€” pages
 * close with their own terminal content.
 * Uses fp- prefixed styles from form-page.css.
 */
import BaseLayout from './BaseLayout.astro';
import LogoAnimated from '../components/LogoAnimated.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
  schema?: Record<string, any> | Record<string, any>[];
  class?: string;
}

const { title, description, image, schema, class: className } = Astro.props;
---

<BaseLayout title={title} description={description} image={image} schema={schema}>
  <main class:list={['fp-page', className]}>
    <div class="fp-column">
      <div class="fp-logo">
        <a href="/" aria-label="Back to Channel47">
          <LogoAnimated />
        </a>
      </div>
      <slot />
    </div>
  </main>
</BaseLayout>

<style is:global>
  @import '../styles/form-page.css';
</style>
