---
/**
 * LandingLayout
 *
 * Minimal layout for standalone landing pages.
 * No header navigation - these pages are designed for
 * direct traffic from ads or organic links.
 *
 * Structure:
 * - Hero section
 * - Product/knowledge section (primary CTA)
 * - Tools section (secondary, links to main site)
 * - Minimal footer (copyright only)
 */
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description, image } = Astro.props;
---

<BaseLayout title={title} description={description} image={image}>
  <main class="landing">
    <slot />
  </main>

  <footer class="landing-footer">
    <p>&copy; {new Date().getFullYear()} Channel47</p>
  </footer>
</BaseLayout>

<style>
  .landing {
    min-height: 100vh;
    padding-top: var(--space-16);
    padding-bottom: var(--space-12);
  }

  @media (min-width: 768px) {
    .landing {
      padding-top: var(--space-24);
      padding-bottom: var(--space-16);
    }
  }

  .landing-footer {
    padding: var(--space-8) var(--padding-mobile);
    text-align: center;
    border-top: var(--divider-width) solid var(--divider-color);
  }

  @media (min-width: 768px) {
    .landing-footer {
      padding: var(--space-10) var(--padding-desktop);
    }
  }

  .landing-footer p {
    font-family: var(--font-sans);
    font-size: var(--text-xs);
    color: var(--color-fg-muted);
    margin: 0;
  }
</style>
