---
/**
 * BaseLayout — root HTML structure for all pages.
 * Provides meta, fonts, structured data, analytics, scroll reveal.
 */

import Analytics from '../components/Analytics/Analytics.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
  schema?: Record<string, any> | Record<string, any>[];
  noindex?: boolean;
}

const {
  title,
  description = 'Free, open-source AI plugins for media buyers — Paid Search, Meta Ads, and TikTok. Built from managing 25+ ad accounts daily.',
  image = '/og-image.png',
  schema,
  noindex = false,
} = Astro.props;

const canonicalURL = Astro.site
  ? new URL(Astro.url.pathname, Astro.site).href
  : Astro.url.pathname;

const ogImage = Astro.site
  ? new URL(image, Astro.site).href
  : image;
---

<!doctype html>
<html lang="en" style="color-scheme: dark;">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <meta name="theme-color" content="#0C0A09" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="alternate" type="application/rss+xml" title="Build Notes — Channel 47" href="/rss.xml" />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    {noindex && <meta name="robots" content="noindex, nofollow" />}
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Channel 47" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@ctrlswing" />
    <meta name="twitter:creator" content="@ctrlswing" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="preload"
      as="style"
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500;600&family=Source+Serif+4:ital,opsz,wght@0,8..60,400;0,8..60,600;1,8..60,400&display=swap"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500;600&family=Source+Serif+4:ital,opsz,wght@0,8..60,400;0,8..60,600;1,8..60,400&display=swap"
      rel="stylesheet"
    />

    <!-- Structured Data -->
    {schema && (
      <script type="application/ld+json" set:html={JSON.stringify(
        Array.isArray(schema)
          ? { '@context': 'https://schema.org', '@graph': schema }
          : { '@context': 'https://schema.org', ...schema }
      )} />
    )}

    <!-- Analytics -->
    <Analytics />
  </head>
  <body>
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-[9999] focus:px-4 focus:py-2 focus:bg-signal focus:text-void focus:rounded-tight focus:text-sm focus:font-mono">Skip to content</a>
    <slot />

    <!-- Scroll Reveal + Nav Scroll -->
    <script>
      import { initScrollReveal } from '../scripts/scroll-reveal';
      import { initNavScroll } from '../scripts/nav-scroll';

      function init() {
        initScrollReveal();
        initNavScroll();
      }

      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', init);
      } else {
        init();
      }

      document.addEventListener('astro:page-load', init);
    </script>
  </body>
</html>

<style is:global>
  @import '../styles/main.css';
</style>
