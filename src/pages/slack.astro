---
/**
 * Slack App Landing Page
 *
 * Dedicated page for the Slack app with waitlist signup.
 */

import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import EmailSignup from '../components/EmailSignup.astro';
---

<BaseLayout
  title="Slack App for Google Ads — Channel47"
  description="Control Google Ads from Slack. Get insights, make changes, and automate your workflow with natural language."
>
  <Header />

  <main class="main">
    <!-- Hero -->
    <section class="hero">
      <div class="hero__content">
        <span class="hero__badge" data-animate="fade-up">Coming Soon</span>
        <h1 class="hero__title" data-animate="fade-up">
          Google Ads in Slack
        </h1>
        <p class="hero__subtitle" data-animate="fade-up">
          Ask questions, get alerts, and make changes to your campaigns
          without leaving Slack. Powered by Claude.
        </p>
      </div>
    </section>

    <!-- Waitlist Signup -->
    <section class="waitlist">
      <div class="waitlist__content" data-animate="fade-up">
        <EmailSignup
          title="Be first when we launch"
          description="Join the waitlist. You'll hear from us once — when it's ready."
          buttonText="Join Waitlist"
          variant="card"
          tag="slack-waitlist"
        />
      </div>
    </section>

    <!-- How It Works -->
    <section class="how-it-works">
      <h2 class="section-title" data-animate="fade-up">How it works</h2>
      <div class="steps" data-animate="fade-up">
        <div class="step">
          <span class="step__number">1</span>
          <h3 class="step__title">Install the app</h3>
          <p class="step__description">
            Add to your Slack workspace with one click.
            Connect your Google Ads accounts securely.
          </p>
        </div>
        <div class="step">
          <span class="step__number">2</span>
          <h3 class="step__title">Ask anything</h3>
          <p class="step__description">
            "How did my campaigns perform yesterday?"
            "Which keywords have the highest CPC?"
          </p>
        </div>
        <div class="step">
          <span class="step__number">3</span>
          <h3 class="step__title">Take action</h3>
          <p class="step__description">
            Pause campaigns, adjust budgets, or update bids.
            Approval workflows keep you in control.
          </p>
        </div>
      </div>
    </section>

    <!-- Features -->
    <section class="features">
      <h2 class="section-title" data-animate="fade-up">What you can do</h2>
      <div class="features__grid" data-animate="fade-up">
        <div class="feature">
          <h3 class="feature__title">Natural language queries</h3>
          <p class="feature__description">
            Ask questions like you would to a colleague.
            Get formatted answers with charts and tables.
          </p>
        </div>
        <div class="feature">
          <h3 class="feature__title">Smart alerts</h3>
          <p class="feature__description">
            Get notified about performance changes, budget pacing,
            and optimization opportunities.
          </p>
        </div>
        <div class="feature">
          <h3 class="feature__title">Safe mutations</h3>
          <p class="feature__description">
            Make changes with confidence. Review and approve
            before anything touches your accounts.
          </p>
        </div>
        <div class="feature">
          <h3 class="feature__title">Team collaboration</h3>
          <p class="feature__description">
            Share insights in channels. Keep your whole team
            informed without separate logins.
          </p>
        </div>
      </div>
    </section>

    <!-- Built On -->
    <section class="built-on">
      <div class="built-on__content" data-animate="fade-up">
        <h2 class="built-on__title">Built on open source</h2>
        <p class="built-on__description">
          The Slack app is powered by the same
          <a href="/tools/google-ads">Google Ads MCP server</a>
          available for free. We use Claude's agent SDK to bring
          conversational control to your accounts.
        </p>
        <a href="/tools" class="built-on__link">Explore free tools &rarr;</a>
      </div>
    </section>

    <!-- Final CTA -->
    <section class="final-cta">
      <div class="final-cta__content" data-animate="fade-up">
        <h2 class="final-cta__title">Want in?</h2>
        <p class="final-cta__description">
          Drop your email. We'll reach out the day we launch.
        </p>
        <EmailSignup
          buttonText="Join Waitlist"
          variant="inline"
          tag="slack-waitlist"
        />
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  .main {
    display: flex;
    flex-direction: column;
  }

  .section-title {
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    text-align: center;
    color: var(--color-fg);
    margin-bottom: var(--space-8);
  }

  @media (min-width: 768px) {
    .section-title {
      font-size: var(--text-2xl);
      margin-bottom: var(--space-10);
    }
  }

  /* Hero */
  .hero {
    padding: var(--space-10) var(--space-4) var(--space-6);
    text-align: center;
  }

  @media (min-width: 768px) {
    .hero {
      padding: var(--space-16) var(--space-8) var(--space-8);
    }
  }

  .hero__content {
    max-width: var(--container-md);
    margin: 0 auto;
  }

  .hero__badge {
    display: inline-block;
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    font-weight: var(--font-medium);
    padding: var(--space-1) var(--space-3);
    background-color: var(--color-accent-subtle);
    color: var(--color-accent);
    border: 1px solid var(--color-accent-muted);
    border-radius: var(--radius-full);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
    margin-bottom: var(--space-4);
  }

  .hero__title {
    font-size: var(--text-3xl);
    font-weight: var(--font-black);
    letter-spacing: var(--tracking-tighter);
    margin-bottom: var(--space-4);
    color: var(--color-fg);
    line-height: var(--leading-tight);
  }

  @media (min-width: 480px) {
    .hero__title {
      font-size: var(--text-4xl);
    }
  }

  @media (min-width: 768px) {
    .hero__title {
      font-size: var(--text-5xl);
      letter-spacing: var(--tracking-tightest);
    }
  }

  .hero__subtitle {
    font-size: var(--text-base);
    color: var(--color-fg-secondary);
    line-height: var(--leading-relaxed);
    max-width: 50ch;
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .hero__subtitle {
      font-size: var(--text-lg);
    }
  }

  /* Waitlist */
  .waitlist {
    padding: var(--space-4) var(--space-4) var(--space-8);
  }

  @media (min-width: 768px) {
    .waitlist {
      padding: var(--space-4) var(--space-8) var(--space-12);
    }
  }

  .waitlist__content {
    max-width: var(--container-sm);
    margin: 0 auto;
  }

  /* How It Works */
  .how-it-works {
    padding: var(--space-10) var(--space-4);
    background-color: var(--color-bg-elevated);
  }

  @media (min-width: 768px) {
    .how-it-works {
      padding: var(--space-16) var(--space-8);
    }
  }

  .steps {
    display: grid;
    gap: var(--space-6);
    max-width: var(--container-lg);
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .steps {
      grid-template-columns: repeat(3, 1fr);
      gap: var(--space-8);
    }
  }

  .step {
    text-align: center;
  }

  .step__number {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    font-weight: var(--font-bold);
    background-color: var(--color-accent);
    color: var(--color-fg-inverse);
    border-radius: var(--radius-full);
    margin-bottom: var(--space-4);
  }

  .step__title {
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    color: var(--color-fg);
    margin-bottom: var(--space-2);
  }

  @media (min-width: 768px) {
    .step__title {
      font-size: var(--text-lg);
    }
  }

  .step__description {
    font-size: var(--text-sm);
    color: var(--color-fg-secondary);
    line-height: var(--leading-relaxed);
    margin: 0;
  }

  /* Features */
  .features {
    padding: var(--space-10) var(--space-4);
  }

  @media (min-width: 768px) {
    .features {
      padding: var(--space-16) var(--space-8);
    }
  }

  .features__grid {
    display: grid;
    gap: var(--space-6);
    max-width: var(--container-lg);
    margin: 0 auto;
  }

  @media (min-width: 640px) {
    .features__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-8);
    }
  }

  .feature {
    padding: var(--space-6);
    background-color: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
  }

  .feature__title {
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    color: var(--color-fg);
    margin-bottom: var(--space-2);
  }

  @media (min-width: 768px) {
    .feature__title {
      font-size: var(--text-lg);
    }
  }

  .feature__description {
    font-size: var(--text-sm);
    color: var(--color-fg-secondary);
    line-height: var(--leading-relaxed);
    margin: 0;
  }

  /* Built On */
  .built-on {
    padding: var(--space-10) var(--space-4);
    background-color: var(--color-bg-elevated);
    text-align: center;
  }

  @media (min-width: 768px) {
    .built-on {
      padding: var(--space-16) var(--space-8);
    }
  }

  .built-on__content {
    max-width: var(--content-width);
    margin: 0 auto;
  }

  .built-on__title {
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
    color: var(--color-fg);
    margin-bottom: var(--space-3);
  }

  @media (min-width: 768px) {
    .built-on__title {
      font-size: var(--text-xl);
    }
  }

  .built-on__description {
    font-size: var(--text-sm);
    color: var(--color-fg-secondary);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-4);
  }

  @media (min-width: 768px) {
    .built-on__description {
      font-size: var(--text-base);
    }
  }

  .built-on__description a {
    color: var(--color-accent);
    text-decoration: underline;
  }

  .built-on__link {
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    color: var(--color-fg-secondary);
    text-decoration: none;
  }

  .built-on__link:hover {
    color: var(--color-accent);
  }

  /* Final CTA */
  .final-cta {
    padding: var(--space-10) var(--space-4);
    padding-bottom: calc(var(--space-12) + var(--safe-area-inset-bottom));
    text-align: center;
  }

  @media (min-width: 768px) {
    .final-cta {
      padding: var(--space-16) var(--space-8);
      padding-bottom: var(--space-16);
    }
  }

  .final-cta__content {
    max-width: var(--container-sm);
    margin: 0 auto;
  }

  .final-cta__title {
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    color: var(--color-fg);
    margin-bottom: var(--space-2);
  }

  @media (min-width: 768px) {
    .final-cta__title {
      font-size: var(--text-2xl);
    }
  }

  .final-cta__description {
    font-size: var(--text-sm);
    color: var(--color-fg-secondary);
    margin-bottom: var(--space-6);
  }

  @media (min-width: 768px) {
    .final-cta__description {
      font-size: var(--text-base);
    }
  }
</style>
