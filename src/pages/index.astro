---
/**
 * Homepage
 *
 * Route qualified traffic. Capture unqualified traffic.
 * Direct, confident tone. Peer to peer.
 *
 * Structure per strategy:
 * 1. Hero with dual CTAs
 * 2. Tools showcase
 * 3. Email Capture
 */

import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Button from '../components/Button.astro';
import EmailSignup from '../components/EmailSignup.astro';
import ToolCard from '../components/ToolCard.astro';
import NewsletterPosts from '../components/NewsletterPosts.astro';

// Featured tools for homepage
const featuredTools = [
  {
    name: 'Google Ads MCP',
    description: 'Query accounts, pull metrics, run GAQL. Connect in five minutes.',
    href: '/tools/google-ads',
    label: 'MCP Server',
  },
  {
    name: 'Creative Designer',
    description: 'AI image generation with platform specs baked in. Powered by Gemini.',
    href: '/tools/creative-designer',
    label: 'MCP Server + Plugin',
  },
];
---

<BaseLayout
  title="Channel47 â€” Open-source AI tools for media buyers"
  description="Free Claude Code plugins and MCP servers for Google Ads, creative generation, and more."
>
  <Header />

  <main class="main">
    <!-- Hero Section with Dual CTAs -->
    <section class="hero">
      <div class="hero__content">
        <h1 class="hero__title" data-animate="fade-up">Open-source AI tools for media buyers</h1>
        <p class="hero__subtitle" data-animate="fade-up">
          Claude Code plugins and MCP servers. Free forever.
        </p>
        <div class="hero__ctas" data-animate="fade-up">
          <Button href="/tools" variant="primary" size="lg">Browse Tools</Button>
          <Button href="https://github.com/channel47/channel47" variant="outline" size="lg">Star on GitHub</Button>
        </div>
      </div>
    </section>

    <!-- Featured Tools -->
    <section class="featured-tools">
      <div class="featured-tools__grid" data-animate="fade-up">
        {featuredTools.map((tool) => (
          <ToolCard
            name={tool.name}
            description={tool.description}
            href={tool.href}
            label={tool.label}
            available={true}
          />
        ))}
      </div>
    </section>

    <!-- Latest from Newsletter -->
    <NewsletterPosts count={3} />

    <!-- Email Signup -->
    <section class="signup-section">
      <div class="signup-wrapper" data-animate="fade-up">
        <EmailSignup
          title="New tools in development."
          description="Get notified when we release new plugins and servers."
          buttonText="Notify me"
          variant="card"
          tag="general"
        />
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  .main {
    display: flex;
    flex-direction: column;
  }

  /* Hero Section */
  .hero {
    padding: var(--space-10) var(--space-4) var(--space-8);
    text-align: center;
  }

  @media (min-width: 768px) {
    .hero {
      padding: var(--space-16) var(--space-8) var(--space-12);
    }
  }

  .hero__content {
    max-width: var(--container-md);
    margin: 0 auto;
  }

  .hero__title {
    font-size: var(--text-3xl);
    font-weight: var(--font-black);
    letter-spacing: var(--tracking-tighter);
    margin-bottom: var(--space-4);
    color: var(--color-fg);
    line-height: var(--leading-tight);
  }

  @media (min-width: 480px) {
    .hero__title {
      font-size: var(--text-4xl);
    }
  }

  @media (min-width: 768px) {
    .hero__title {
      font-size: var(--text-5xl);
      margin-bottom: var(--space-5);
      letter-spacing: var(--tracking-tightest);
    }
  }

  .hero__subtitle {
    font-size: var(--text-base);
    color: var(--color-fg-secondary);
    line-height: var(--leading-relaxed);
    max-width: 50ch;
    margin: 0 auto var(--space-6);
  }

  @media (min-width: 768px) {
    .hero__subtitle {
      font-size: var(--text-lg);
      max-width: 55ch;
      margin-bottom: var(--space-8);
    }
  }

  .hero__ctas {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
    max-width: 320px;
    margin: 0 auto;
  }

  @media (min-width: 480px) {
    .hero__ctas {
      flex-direction: row;
      justify-content: center;
      max-width: none;
      gap: var(--space-4);
    }
  }

  /* Featured Tools Section */
  .featured-tools {
    padding: var(--space-6) var(--space-4);
  }

  @media (min-width: 768px) {
    .featured-tools {
      padding: var(--space-8) var(--space-8);
    }
  }

  .featured-tools__grid {
    display: grid;
    gap: var(--space-4);
    max-width: var(--container-lg);
    margin: 0 auto;
  }

  @media (min-width: 640px) {
    .featured-tools__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-5);
    }
  }

  /* Signup Section */
  .signup-section {
    padding: var(--space-8) var(--space-4);
    padding-bottom: calc(var(--space-10) + var(--safe-area-inset-bottom));
    border-top: 1px solid var(--color-border-subtle);
    margin-top: var(--space-4);
  }

  @media (min-width: 768px) {
    .signup-section {
      padding: var(--space-10) var(--space-8);
      padding-bottom: var(--space-12);
      margin-top: var(--space-6);
    }
  }

  .signup-wrapper {
    max-width: var(--container-sm);
    margin: 0 auto;
  }
</style>
