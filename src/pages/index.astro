---
/**
 * Homepage — AI plugins for media buyers.
 *
 * Density: LOW (hero) → HIGH (proof bar) → HIGH (plugin directory) →
 *          MEDIUM (credibility) → RUPTURE → MEDIUM (product) → LOW (CTA void)
 */
import BaseLayout from '../layouts/BaseLayout.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import EmailSignup from '../components/EmailSignup.astro';
import ProductCallout from '../components/ProductCallout.astro';

const schema = [
  {
    '@type': 'Organization',
    'name': 'Channel 47',
    'url': 'https://channel47.dev',
    'logo': 'https://channel47.dev/logo-square.png',
    'description': 'Free, open-source AI plugins for media buyers. Platform-specific plugins for Paid Search, Meta Ads, and TikTok — built from managing 25+ ad accounts daily.',
    'founder': {
      '@type': 'Person',
      'name': 'Jackson Dean',
      'url': 'https://x.com/ctrlswing',
      'jobTitle': 'Media Buyer & Plugin Developer',
    },
    'sameAs': [
      'https://github.com/channel47',
      'https://x.com/ctrlswing',
    ],
  },
  {
    '@type': 'WebSite',
    'name': 'Channel 47',
    'url': 'https://channel47.dev',
  },
];
---

<BaseLayout
  title="AI Plugins for Media Buyers — Channel 47"
  description="Free, open-source AI plugins for Paid Search, Meta Ads, and TikTok — built from managing 25+ ad accounts daily. Install and run, or learn to build your own."
  schema={schema}
>
  <Nav />

  <main id="main-content">

    <!-- ═══════ HERO — LOW density ═══════ -->
    <section class="hero is-visible">
      <div class="hero__inner">
        <div class="hero__bar" aria-hidden="true"></div>
        <p class="label hero__label">Transmitting</p>
        <h1 class="hero__headline">AI plugins for<br />media buyers.</h1>
        <p class="hero__sub">
          Free, open-source plugins for Paid Search, Meta Ads, and TikTok.<br />
          Install and run. Or learn to build your own.
        </p>
        <div class="hero__cta">
          <EmailSignup variant="inline" placeholder="you@domain.com" tag="home" submitText="Get Build Notes" />
          <p class="hero__hint">One email a week. Unsubscribe anytime.</p>
        </div>
      </div>
    </section>

    <!-- ═══════ PROOF BAR — HIGH density ═══════ -->
    <section class="proof-bar" data-reveal-stagger>
      <div class="proof-bar__item" data-reveal-child data-stagger="1">
        <span class="proof-bar__value" data-counter="25">25<span class="text-signal">+</span></span>
        <span class="proof-bar__label">Accounts Managed</span>
      </div>
      <div class="proof-bar__item" data-reveal-child data-stagger="2">
        <span class="proof-bar__value proof-bar__value--signal" data-counter="3">3</span>
        <span class="proof-bar__label">Platforms</span>
      </div>
      <div class="proof-bar__item" data-reveal-child data-stagger="3">
        <span class="proof-bar__value">Weekly</span>
        <span class="proof-bar__label">Build Notes</span>
      </div>
      <div class="proof-bar__item" data-reveal-child data-stagger="4">
        <span class="proof-bar__value" data-counter="16">16</span>
        <span class="proof-bar__label">Tools Shipped</span>
      </div>
    </section>

    <!-- ═══════ PLUGIN DIRECTORY — HIGH density ═══════ -->
    <section class="directory" data-reveal-stagger>
      <div class="wrap">
        <div class="directory__header" data-reveal-child data-stagger="1">
          <h2 class="directory__title">Browse the plugins</h2>
          <a href="/plugins" class="directory__link">View all →</a>
        </div>

        <ul class="directory__list" data-reveal-child data-stagger="2">
          <li class="directory-row">
            <a href="/plugins/paid-search" class="directory-row__link">
              <span class="directory-row__idx">001</span>
              <span class="directory-row__name">Paid Search</span>
              <span class="directory-row__badge directory-row__badge--live">Live</span>
            </a>
          </li>
          <li class="directory-row">
            <a href="/coming-soon" class="directory-row__link">
              <span class="directory-row__idx">002</span>
              <span class="directory-row__name">Meta Ads</span>
              <span class="directory-row__badge directory-row__badge--dev">In Dev</span>
            </a>
          </li>
          <li class="directory-row">
            <a href="/coming-soon" class="directory-row__link">
              <span class="directory-row__idx">003</span>
              <span class="directory-row__name">TikTok Ads</span>
              <span class="directory-row__badge directory-row__badge--soon">Soon</span>
            </a>
          </li>
        </ul>
      </div>
    </section>

    <!-- ═══════ CREDIBILITY — MEDIUM density ═══════ -->
    <section class="credibility" data-reveal>
      <div class="wrap">
        <p class="label">Built from real accounts</p>
        <p class="credibility__body">
          The paid-search plugin caught ~$3K/month in wasted spend across two accounts. A pacing alert flagged a budget overrun four days before the client noticed. Every tool here comes from managing 25+ accounts daily — not a lab.
        </p>
        <a href="/notes" class="credibility__link">Follow the build notes →</a>
      </div>
    </section>

    <!-- ═══════ RUPTURE — surface flip + density shift (LOW) ═══════ -->
    <section class="rupture" data-reveal>
      <div class="rupture__inner">
        <div class="rupture__bar"></div>
        <p class="label label--muted" style="margin-bottom: 20px;">Signal</p>
        <h2 class="rupture__headline">The people who build skills become the most valuable people in their field.</h2>
        <a href="/plugins" class="rupture__link">See the plugins →</a>
      </div>
    </section>

    <!-- ═══════ PRODUCT CALLOUT — MEDIUM density ═══════ -->
    <ProductCallout />

    <!-- ═══════ CTA VOID — LOW density ═══════ -->
    <section class="cta" data-reveal>
      <a href="/plugins" class="cta__headline">See the plugins.</a>
      <a href="/subscribe" class="btn-signal">Get Build Notes</a>
    </section>

    <Footer />
  </main>
</BaseLayout>



