---
/**
 * Homepage
 *
 * Problem-first design with equal-weight solutions.
 * Lead with the pain point, present Slack App + Free Tools.
 */

import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SolutionCard from '../components/SolutionCard.astro';
import RecentPosts from '../components/RecentPosts.astro';
import EmailSignup from '../components/EmailSignup.astro';
---

<BaseLayout
  title="Channel47 — Stop context-switching between Slack and Google Ads"
  description="Manage Google Ads from Slack or use free Claude Code plugins. AI-powered automation for media buyers."
>
  <Header />

  <main class="main">
    <!-- Hero: Problem Statement -->
    <section class="hero">
      <div class="hero__content">
        <h1 class="hero__title" data-animate="fade-up">
          Stop context-switching between Slack and Google Ads
        </h1>
        <p class="hero__subtitle" data-animate="fade-up">
          Pull reports, adjust budgets, and catch issues before they cost you —
          all without opening another tab. Two ways to get started.
        </p>
      </div>
    </section>

    <!-- Solutions: Two Equal-Weight Options -->
    <section class="solutions">
      <div class="solutions__grid" data-animate="fade-up">
        <SolutionCard
          title="Slack App"
          description="Ask questions. Get answers. No spreadsheets."
          badge="Coming Soon"
          badgeVariant="accent"
          features={[
            "\"How's my ROAS today?\" — Ask like you'd message a teammate",
            "Budget pacing alerts before you overspend",
            "Pause campaigns or adjust bids with approval controls",
            "Connects to the workspace you already use"
          ]}
          ctaText="Join Waitlist"
          ctaTag="slack-waitlist"
          variant="primary"
        />

        <SolutionCard
          title="Claude Code Plugins"
          description="Power user tools. Full control."
          badge="Free"
          badgeVariant="default"
          features={[
            "Query any account data with GAQL",
            "AI-powered analysis and recommendations",
            "Open source, self-hosted",
            "Works with Claude Code and MCP"
          ]}
          ctaText="Browse Tools"
          ctaHref="/tools"
          variant="secondary"
        />
      </div>
    </section>

    <!-- How It Works (Brief) -->
    <section class="how-it-works">
      <div class="how-it-works__content" data-animate="fade-up">
        <h2 class="how-it-works__title">Built on open source</h2>
        <p class="how-it-works__description">
          The Slack app is powered by the same plugins available for free.
          We use Claude's agent SDK to bring natural language control
          to your Google Ads accounts.
        </p>
      </div>
    </section>

    <!-- Recent Blog Posts -->
    <RecentPosts count={3} />

    <!-- General Email Signup -->
    <section class="signup-section">
      <div class="signup-wrapper" data-animate="fade-up">
        <EmailSignup
          title="More tools on the way."
          description="First access to new plugins. No spam, just releases."
          buttonText="Notify me"
          variant="card"
          tag="general"
        />
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  .main {
    display: flex;
    flex-direction: column;
  }

  /* Hero Section */
  .hero {
    padding: var(--space-12) var(--padding-mobile) var(--space-10);
    text-align: center;
  }

  @media (min-width: 768px) {
    .hero {
      padding: var(--section-padding-desktop) var(--padding-desktop) var(--space-12);
    }
  }

  .hero__content {
    max-width: var(--container-md);
    margin: 0 auto;
  }

  .hero__title {
    font-size: var(--text-3xl);
    font-weight: var(--font-black);
    letter-spacing: var(--tracking-tighter);
    margin-bottom: var(--space-4);
    color: var(--color-fg);
    line-height: var(--leading-tight);
  }

  @media (min-width: 480px) {
    .hero__title {
      font-size: var(--text-4xl);
    }
  }

  @media (min-width: 768px) {
    .hero__title {
      font-size: var(--text-5xl);
      margin-bottom: var(--space-5);
      letter-spacing: var(--tracking-tightest);
    }
  }

  .hero__subtitle {
    font-size: var(--text-base);
    color: var(--color-fg-secondary);
    line-height: var(--leading-relaxed);
    max-width: 50ch;
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .hero__subtitle {
      font-size: var(--text-lg);
      max-width: 55ch;
    }
  }

  /* Solutions Section */
  .solutions {
    padding: var(--space-8) var(--padding-mobile);
  }

  @media (min-width: 768px) {
    .solutions {
      padding: var(--space-10) var(--padding-desktop);
    }
  }

  .solutions__grid {
    display: grid;
    gap: var(--space-4);
    max-width: var(--container-lg);
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .solutions__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-6);
    }
  }

  /* How It Works Section */
  .how-it-works {
    padding: var(--section-padding-mobile) var(--padding-mobile);
    text-align: center;
  }

  @media (min-width: 768px) {
    .how-it-works {
      padding: var(--section-padding-desktop) var(--padding-desktop);
    }
  }

  .how-it-works__content {
    max-width: var(--content-width);
    margin: 0 auto;
  }

  .how-it-works__title {
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
    color: var(--color-fg);
    margin-bottom: var(--space-3);
  }

  @media (min-width: 768px) {
    .how-it-works__title {
      font-size: var(--text-xl);
      margin-bottom: var(--space-4);
    }
  }

  .how-it-works__description {
    font-size: var(--text-sm);
    color: var(--color-fg-secondary);
    line-height: var(--leading-relaxed);
    margin: 0;
  }

  @media (min-width: 768px) {
    .how-it-works__description {
      font-size: var(--text-base);
    }
  }

  /* Signup Section */
  .signup-section {
    padding: var(--section-padding-mobile) var(--padding-mobile);
    padding-bottom: calc(var(--space-12) + var(--safe-area-inset-bottom));
    border-top: 1px solid var(--color-border-subtle);
    margin-top: var(--space-6);
  }

  @media (min-width: 768px) {
    .signup-section {
      padding: var(--section-padding-desktop) var(--padding-desktop);
      padding-bottom: var(--space-16);
      margin-top: var(--space-8);
    }
  }

  .signup-wrapper {
    max-width: var(--container-sm);
    margin: 0 auto;
  }
</style>
