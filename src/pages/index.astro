---
/**
 * Homepage
 *
 * Route qualified traffic. Capture unqualified traffic.
 * Direct, confident tone. Peer to peer.
 *
 * Structure per strategy:
 * 1. Hero with dual CTAs
 * 2. Tools showcase
 * 3. Email Capture
 */

import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Button from '../components/Button.astro';
import EmailSignup from '../components/EmailSignup.astro';
---

<BaseLayout
  title="Channel47 â€” Open-source AI tools for media buyers"
  description="Free Claude Code plugins and MCP servers for Google Ads, creative generation, and more."
>
  <Header />

  <main class="main">
    <!-- Hero Section with Dual CTAs -->
    <section class="hero">
      <div class="hero__content">
        <h1 class="hero__title" data-animate="fade-up">Open-source AI tools for media buyers</h1>
        <p class="hero__subtitle" data-animate="fade-up">
          Claude Code plugins and MCP servers. Free forever.
        </p>
        <div class="hero__ctas" data-animate="fade-up">
          <Button href="/tools" variant="primary" size="lg">Browse Tools</Button>
          <Button href="https://github.com/channel47/channel47" variant="outline" size="lg">Star on GitHub</Button>
        </div>
      </div>
    </section>

    <!-- Tools Section -->
    <section class="tools-teaser">
      <div class="tools-teaser__content" data-animate="fade-up">
        <h2 class="tools-teaser__title">Built for performance marketers</h2>
        <p class="tools-teaser__description">
          MCP servers for Google Ads, creative generation, and more. Connect in minutes.
        </p>
        <Button href="/tools" variant="secondary">Explore the Tools</Button>
      </div>
    </section>

    <!-- Email Signup -->
    <section class="signup-section">
      <div class="signup-wrapper" data-animate="fade-up">
        <EmailSignup
          title="New tools in development."
          description="Get notified when we release new plugins and servers."
          buttonText="Notify me"
          variant="card"
          tag="general"
        />
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  .main {
    display: flex;
    flex-direction: column;
  }

  /* Hero Section */
  .hero {
    padding: var(--space-16) var(--space-4) var(--space-12);
    text-align: center;
  }

  @media (min-width: 768px) {
    .hero {
      padding: var(--space-24) var(--space-8) var(--space-16);
    }
  }

  .hero__content {
    max-width: var(--container-md);
    margin: 0 auto;
  }

  .hero__title {
    font-size: var(--text-3xl);
    font-weight: var(--font-black);
    letter-spacing: var(--tracking-tighter);
    margin-bottom: var(--space-5);
    color: var(--color-fg);
    line-height: var(--leading-tight);
  }

  @media (min-width: 480px) {
    .hero__title {
      font-size: var(--text-4xl);
    }
  }

  @media (min-width: 768px) {
    .hero__title {
      font-size: var(--text-5xl);
      margin-bottom: var(--space-6);
      letter-spacing: var(--tracking-tightest);
    }
  }

  .hero__subtitle {
    font-size: var(--text-base);
    color: var(--color-fg-secondary);
    line-height: var(--leading-relaxed);
    max-width: 50ch;
    margin: 0 auto var(--space-8);
  }

  @media (min-width: 768px) {
    .hero__subtitle {
      font-size: var(--text-lg);
      max-width: 55ch;
      margin-bottom: var(--space-10);
    }
  }

  .hero__ctas {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
    max-width: 320px;
    margin: 0 auto;
  }

  @media (min-width: 480px) {
    .hero__ctas {
      flex-direction: row;
      justify-content: center;
      max-width: none;
      gap: var(--space-4);
    }
  }

  /* Tools Teaser Section */
  .tools-teaser {
    padding: var(--space-12) var(--space-4);
  }

  @media (min-width: 768px) {
    .tools-teaser {
      padding: var(--space-16) var(--space-8);
    }
  }

  .tools-teaser__content {
    max-width: var(--container-sm);
    margin: 0 auto;
    text-align: center;
  }

  .tools-teaser__title {
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    color: var(--color-fg);
    margin-bottom: var(--space-2);
  }

  @media (min-width: 768px) {
    .tools-teaser__title {
      font-size: var(--text-2xl);
    }
  }

  .tools-teaser__description {
    font-size: var(--text-base);
    color: var(--color-fg-secondary);
    margin-bottom: var(--space-6);
  }

  @media (min-width: 768px) {
    .tools-teaser__description {
      font-size: var(--text-lg);
      margin-bottom: var(--space-8);
    }
  }

  /* Signup Section */
  .signup-section {
    padding: var(--space-8) var(--space-4);
    padding-bottom: var(--space-16);
    padding-bottom: calc(var(--space-16) + var(--safe-area-inset-bottom));
    background-color: var(--color-bg-elevated);
  }

  @media (min-width: 768px) {
    .signup-section {
      padding: var(--space-12) var(--space-8);
      padding-bottom: var(--space-20);
    }
  }

  .signup-wrapper {
    max-width: var(--container-sm);
    margin: 0 auto;
  }
</style>
