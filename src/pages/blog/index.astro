---
/**
 * Blog Listing Page
 *
 * Displays newsletter posts from beehiiv API.
 */

import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Card from '../../components/Card.astro';
import EmailSignup from '../../components/EmailSignup.astro';
import { getAllPosts, timestampToDate, formatDate } from '../../lib/beehiiv';

// Fetch posts from beehiiv at build time
let posts: Awaited<ReturnType<typeof getAllPosts>>['posts'] = [];
let hasError = false;

try {
  const result = await getAllPosts({ limit: 50 });
  posts = result.posts;
} catch (e) {
  console.error('Failed to fetch posts from beehiiv:', e);
  hasError = true;
}
---

<BaseLayout title="Blog" description="Insights on AI tools, Google Ads automation, and MCP skills.">
  <Header />

  <main class="blog-page">
    <div class="blog-page__header">
      <h1 class="blog-page__title">Newsletter</h1>
      <p class="blog-page__description">
        Insights on AI tools, Google Ads automation, and MCP skills.
      </p>
    </div>

    <!-- Subscribe CTA -->
    <div class="blog-page__subscribe">
      <EmailSignup
        title="Get posts in your inbox"
        description="Subscribe to the newsletter for weekly updates."
        buttonText="Subscribe"
        variant="inline"
        tag="blog-visitor"
      />
    </div>

    {hasError && (
      <div class="blog-page__error">
        <p>Unable to load posts. Please try again later.</p>
        <p class="blog-page__error-hint">
          Check out our <a href="/archive/blog">archived posts</a> in the meantime.
        </p>
      </div>
    )}

    <div class="blog-grid">
      {posts.map((post) => (
        <Card href={`/blog/${post.slug}`} variant="ghost">
          <time class="card__date" datetime={timestampToDate(post.displayed_date).toISOString()}>
            {formatDate(timestampToDate(post.displayed_date))}
          </time>
          <h2 class="card__title">{post.title}</h2>
          {post.subtitle && (
            <p class="card__description">{post.subtitle}</p>
          )}
          {!post.subtitle && post.meta_default_description && (
            <p class="card__description">{post.meta_default_description}</p>
          )}
        </Card>
      ))}
    </div>

    {!hasError && posts.length === 0 && (
      <p class="blog-page__empty">
        No posts yet. Check out our <a href="/archive/blog">archived posts</a> in the meantime.
      </p>
    )}

    {posts.length > 0 && (
      <div class="blog-page__archive-link">
        <a href="/archive/blog">View archived posts &rarr;</a>
      </div>
    )}
  </main>

  <Footer />
</BaseLayout>

<style>
  .blog-page {
    display: flex;
    flex-direction: column;
  }

  .blog-page__header {
    padding: var(--space-10) var(--space-4) var(--space-6);
    text-align: center;
  }

  @media (min-width: 768px) {
    .blog-page__header {
      padding: var(--space-16) var(--space-8) var(--space-8);
    }
  }

  .blog-page__title {
    font-size: var(--text-3xl);
    font-weight: var(--font-black);
    letter-spacing: var(--tracking-tighter);
    margin-bottom: var(--space-4);
    color: var(--color-fg);
    line-height: var(--leading-tight);
  }

  @media (min-width: 480px) {
    .blog-page__title {
      font-size: var(--text-4xl);
    }
  }

  @media (min-width: 768px) {
    .blog-page__title {
      font-size: var(--text-5xl);
      letter-spacing: var(--tracking-tightest);
    }
  }

  .blog-page__description {
    font-size: var(--text-base);
    color: var(--color-fg-secondary);
    line-height: var(--leading-relaxed);
    max-width: 45ch;
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .blog-page__description {
      font-size: var(--text-lg);
    }
  }

  .blog-page__subscribe {
    max-width: var(--container-sm);
    margin: 0 auto var(--space-8);
    padding: 0 var(--space-4);
  }

  @media (min-width: 768px) {
    .blog-page__subscribe {
      margin-bottom: var(--space-10);
      padding: 0 var(--space-8);
    }
  }

  .blog-page__error {
    max-width: var(--container-lg);
    margin: 0 auto var(--space-8);
    padding: var(--space-6) var(--space-4);
    background-color: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    text-align: center;
  }

  .blog-page__error p {
    color: var(--color-fg-secondary);
    margin: 0;
  }

  .blog-page__error-hint {
    margin-top: var(--space-2) !important;
    font-size: var(--text-sm);
  }

  .blog-page__error a {
    color: var(--color-accent);
    text-decoration: underline;
  }

  .blog-grid {
    display: grid;
    gap: var(--space-4);
    padding: 0 var(--space-4) var(--space-10);
    max-width: var(--container-lg);
    margin: 0 auto;
    width: 100%;
  }

  @media (min-width: 640px) {
    .blog-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-5);
    }
  }

  @media (min-width: 768px) {
    .blog-grid {
      padding: 0 var(--space-8) var(--space-16);
    }
  }

  .blog-page__empty {
    text-align: center;
    color: var(--color-fg-muted);
    padding: var(--space-16) var(--space-4);
  }

  .blog-page__empty a {
    color: var(--color-accent);
    text-decoration: underline;
  }

  .blog-page__archive-link {
    text-align: center;
    padding: 0 var(--space-4) var(--space-16);
  }

  .blog-page__archive-link a {
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    color: var(--color-fg-secondary);
    text-decoration: none;
  }

  .blog-page__archive-link a:hover {
    color: var(--color-accent);
    text-decoration: underline;
  }

  .card__date {
    display: block;
    font-size: var(--text-xs);
    color: var(--color-fg-muted);
    margin-bottom: var(--space-2);
  }
</style>
