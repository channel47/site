---
/**
 * Blog Listing Page
 *
 * Displays all published posts from the content collection.
 */

import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Card from '../../components/Card.astro';

const posts = (await getCollection('posts'))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const formatDate = (date: Date) =>
  new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
  }).format(date);
---

<BaseLayout title="Blog" description="Insights on AI tools, Google Ads automation, and MCP skills.">
  <Header />

  <main class="blog-page">
    <div class="blog-page__header">
      <h1 class="blog-page__title">Blog</h1>
      <p class="blog-page__description">
        Insights on AI tools, Google Ads automation, and MCP skills.
      </p>
    </div>

    <div class="blog-grid">
      {posts.map((post) => (
        <Card href={`/blog/${post.slug}`} variant="ghost">
          <time class="card__date" datetime={post.data.date.toISOString()}>
            {formatDate(post.data.date)}
          </time>
          <h2 class="card__title">{post.data.title}</h2>
          <p class="card__description">{post.data.description}</p>
        </Card>
      ))}
    </div>

    {posts.length === 0 && (
      <p class="blog-page__empty">No posts yet. Check back soon.</p>
    )}
  </main>

  <Footer />
</BaseLayout>

<style>
  .blog-page {
    display: flex;
    flex-direction: column;
  }

  .blog-page__header {
    padding: var(--space-10) var(--space-4) var(--space-8);
    text-align: center;
  }

  @media (min-width: 768px) {
    .blog-page__header {
      padding: var(--space-16) var(--space-8) var(--space-10);
    }
  }

  .blog-page__title {
    font-size: var(--text-3xl);
    font-weight: var(--font-black);
    letter-spacing: var(--tracking-tighter);
    margin-bottom: var(--space-4);
    color: var(--color-fg);
    line-height: var(--leading-tight);
  }

  @media (min-width: 480px) {
    .blog-page__title {
      font-size: var(--text-4xl);
    }
  }

  @media (min-width: 768px) {
    .blog-page__title {
      font-size: var(--text-5xl);
      letter-spacing: var(--tracking-tightest);
    }
  }

  .blog-page__description {
    font-size: var(--text-base);
    color: var(--color-fg-secondary);
    line-height: var(--leading-relaxed);
    max-width: 45ch;
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .blog-page__description {
      font-size: var(--text-lg);
    }
  }

  .blog-grid {
    display: grid;
    gap: var(--space-4);
    padding: 0 var(--space-4) var(--space-10);
    max-width: var(--container-lg);
    margin: 0 auto;
    width: 100%;
  }

  @media (min-width: 640px) {
    .blog-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-5);
    }
  }

  @media (min-width: 768px) {
    .blog-grid {
      padding: 0 var(--space-8) var(--space-16);
    }
  }

  .blog-page__empty {
    text-align: center;
    color: var(--color-fg-muted);
    padding: var(--space-16) var(--space-4);
  }

  .card__date {
    display: block;
    font-size: var(--text-xs);
    color: var(--color-fg-muted);
    margin-bottom: var(--space-2);
  }
</style>
