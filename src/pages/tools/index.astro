---
/**
 * Tools Index Page
 *
 * Catalog of open-source MCP servers and Claude Code plugins.
 * All tools are MIT licensed.
 *
 * Tool data is synced from plugin.json files via `npm run sync-plugins`.
 * See: site/scripts/sync-plugins.ts
 */

import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import EmailSignup from '../../components/EmailSignup.astro';
import ToolCard from '../../components/ToolCard.astro';

// Import generated tool data from plugin manifests
import toolsData from '../../data/tools.generated.json';
import type { GeneratedToolsData } from '../../data/tools.types';

// Cast to typed data
const data = toolsData as GeneratedToolsData;

// Map generated data to the format expected by ToolCard
const tools = data.tools.map((tool) => ({
  name: tool.displayName,
  description: tool.tagline,
  href: tool.href,
  available: true,
  label: tool.label,
}));
---

<BaseLayout
  title="Free Tools â€” Channel47"
  description="Free hosted MCP servers you can connect in minutes. Google Ads, creative generation, and more."
>
  <Header />

  <main class="tools-index">
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero__content">
        <h1 class="hero__title">Free tools that actually work.</h1>
        <p class="hero__subtitle">
          Claude Code plugins and MCP servers. Set up once, use everywhere.
        </p>
        <p class="hero__badge">MIT Licensed</p>
      </div>
    </section>

    <!-- Tools Grid -->
    <section class="tools-section">
      <div class="tools-grid">
        {tools.map((tool) => (
          <ToolCard
            name={tool.name}
            description={tool.description}
            href={tool.href}
            label={tool.label}
            available={tool.available}
          />
        ))}
      </div>
    </section>

    <!-- Email Signup -->
    <section class="signup-section">
      <div class="signup-wrapper">
        <EmailSignup
          title="Building more."
          description="Get notified when we ship new plugins."
          buttonText="Notify me"
          variant="card"
          tag="tools-user"
        />
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  .tools-index {
    display: flex;
    flex-direction: column;
  }

  /* Hero Section */
  .hero {
    padding: var(--space-10) var(--space-4) var(--space-6);
    text-align: center;
  }

  @media (min-width: 768px) {
    .hero {
      padding: var(--space-16) var(--space-8) var(--space-10);
    }
  }

  .hero__content {
    max-width: var(--container-md);
    margin: 0 auto;
  }

  .hero__title {
    font-size: var(--text-3xl);
    font-weight: var(--font-black);
    letter-spacing: var(--tracking-tighter);
    margin-bottom: var(--space-4);
    color: var(--color-fg);
    line-height: var(--leading-tight);
  }

  @media (min-width: 480px) {
    .hero__title {
      font-size: var(--text-4xl);
    }
  }

  @media (min-width: 768px) {
    .hero__title {
      font-size: var(--text-5xl);
      letter-spacing: var(--tracking-tightest);
    }
  }

  .hero__subtitle {
    font-size: var(--text-base);
    color: var(--color-fg-secondary);
    line-height: var(--leading-relaxed);
    max-width: 45ch;
    margin: 0 auto var(--space-4);
  }

  @media (min-width: 768px) {
    .hero__subtitle {
      font-size: var(--text-lg);
      margin-bottom: var(--space-5);
    }
  }

  .hero__badge {
    display: inline-block;
    font-family: var(--font-sans);
    font-size: var(--text-xs);
    font-weight: var(--font-semibold);
    color: var(--color-success);
    background-color: oklch(from var(--color-success) l c h / 0.15);
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-full);
    letter-spacing: var(--tracking-wide);
    text-transform: uppercase;
    margin: 0;
  }

  /* Tools Section */
  .tools-section {
    padding: var(--space-6) var(--space-4);
  }

  @media (min-width: 768px) {
    .tools-section {
      padding: var(--space-8) var(--space-8);
    }
  }

  .tools-grid {
    display: grid;
    gap: var(--space-4);
    max-width: var(--container-lg);
    margin: 0 auto;
  }

  @media (min-width: 640px) {
    .tools-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-5);
    }
  }

  /* Signup Section */
  .signup-section {
    padding: var(--space-8) var(--space-4);
    padding-bottom: calc(var(--space-10) + var(--safe-area-inset-bottom));
    border-top: 1px solid var(--color-border-subtle);
    margin-top: var(--space-4);
  }

  @media (min-width: 768px) {
    .signup-section {
      padding: var(--space-10) var(--space-8);
      padding-bottom: var(--space-12);
      margin-top: var(--space-6);
    }
  }

  .signup-wrapper {
    max-width: var(--container-sm);
    margin: 0 auto;
  }
</style>
