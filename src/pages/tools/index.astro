---
/**
 * Tools Index Page
 *
 * Catalog of free MCP servers.
 * Top-of-funnel lead generation with soft sell to Skills.
 */

import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Button from '../../components/Button.astro';
import EmailSignup from '../../components/EmailSignup.astro';
import ToolCard from '../../components/ToolCard.astro';

// Tool data - add new tools here
const tools = [
  {
    name: 'Google Ads MCP',
    description: 'Query accounts, pull metrics, run GAQL. Connect in five minutes.',
    href: '/tools/google-ads',
    available: true,
    label: 'MCP Server',
  },
  {
    name: 'Nano Banana MCP',
    description: 'Generate ad creatives with platform specs baked in.',
    href: '/tools/nano-banana',
    available: false,
    label: 'MCP Server',
  },
];
---

<BaseLayout
  title="Free Tools â€” Channel47"
  description="Free hosted MCP servers you can connect in minutes. Google Ads, creative generation, and more."
>
  <Header />

  <main class="tools-index">
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero__content">
        <h1 class="hero__title">Free tools. Real capability.</h1>
        <p class="hero__subtitle">
          Hosted MCP servers you can connect in minutes. No install. No dependencies.
        </p>
      </div>
    </section>

    <!-- Tools Grid -->
    <section class="tools-section">
      <div class="tools-grid">
        {tools.map((tool) => (
          <ToolCard
            name={tool.name}
            description={tool.description}
            href={tool.href}
            label={tool.label}
            available={tool.available}
          />
        ))}
      </div>
    </section>

    <!-- Upsell Banner -->
    <section class="upsell-section">
      <div class="upsell-banner">
        <p class="upsell-banner__text">
          Tools give you access. <strong>Skills give you judgment.</strong>
        </p>
        <Button href="/skills" variant="primary">Browse Skills</Button>
      </div>
    </section>

    <!-- Email Signup -->
    <section class="signup-section">
      <div class="signup-wrapper">
        <EmailSignup
          title="New tools in development."
          description="Leave your email. We'll let you know when they're ready."
          buttonText="Notify me"
          variant="card"
          tag="tools-user"
        />
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  .tools-index {
    display: flex;
    flex-direction: column;
  }

  /* Hero Section */
  .hero {
    padding: var(--space-16) var(--space-4) var(--space-10);
    text-align: center;
  }

  @media (min-width: 768px) {
    .hero {
      padding: var(--space-24) var(--space-8) var(--space-16);
    }
  }

  .hero__content {
    max-width: var(--container-md);
    margin: 0 auto;
  }

  .hero__title {
    font-size: var(--text-3xl);
    font-weight: var(--font-black);
    letter-spacing: var(--tracking-tighter);
    margin-bottom: var(--space-4);
    color: var(--color-fg);
    line-height: var(--leading-tight);
  }

  @media (min-width: 480px) {
    .hero__title {
      font-size: var(--text-4xl);
    }
  }

  @media (min-width: 768px) {
    .hero__title {
      font-size: var(--text-5xl);
      letter-spacing: var(--tracking-tightest);
    }
  }

  .hero__subtitle {
    font-size: var(--text-base);
    color: var(--color-fg-secondary);
    line-height: var(--leading-relaxed);
    max-width: 45ch;
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .hero__subtitle {
      font-size: var(--text-lg);
    }
  }

  /* Tools Section */
  .tools-section {
    padding: var(--space-8) var(--space-4);
  }

  @media (min-width: 768px) {
    .tools-section {
      padding: var(--space-12) var(--space-8);
    }
  }

  .tools-grid {
    display: grid;
    gap: var(--space-4);
    max-width: var(--container-lg);
    margin: 0 auto;
  }

  @media (min-width: 640px) {
    .tools-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-6);
    }
  }

  /* Upsell Section */
  .upsell-section {
    padding: var(--space-8) var(--space-4);
  }

  @media (min-width: 768px) {
    .upsell-section {
      padding: var(--space-12) var(--space-8);
    }
  }

  .upsell-banner {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-5);
    max-width: var(--container-md);
    margin: 0 auto;
    padding: var(--space-8);
    background-color: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-radius: var(--card-radius);
    text-align: center;
  }

  @media (min-width: 640px) {
    .upsell-banner {
      flex-direction: row;
      justify-content: space-between;
      text-align: left;
    }
  }

  .upsell-banner__text {
    font-size: var(--text-base);
    color: var(--color-fg-secondary);
    margin: 0;
  }

  @media (min-width: 768px) {
    .upsell-banner__text {
      font-size: var(--text-lg);
    }
  }

  .upsell-banner__text strong {
    color: var(--color-fg);
  }

  /* Signup Section */
  .signup-section {
    padding: var(--space-8) var(--space-4);
    padding-bottom: var(--space-16);
    background-color: var(--color-bg-elevated);
  }

  @media (min-width: 768px) {
    .signup-section {
      padding: var(--space-12) var(--space-8);
      padding-bottom: var(--space-20);
    }
  }

  .signup-wrapper {
    max-width: var(--container-sm);
    margin: 0 auto;
  }
</style>
