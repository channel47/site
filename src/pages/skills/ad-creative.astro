---
/**
 * Ad Creative Skills Page
 *
 * Coming soon placeholder with email capture.
 * Build interest for the upcoming product.
 */

import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Button from '../../components/Button.astro';
import EmailSignup from '../../components/EmailSignup.astro';
---

<BaseLayout
  title="Ad Creative Skills — Coming Soon — Channel47"
  description="AI can generate images. Soon it'll know what actually converts. Skill files for Meta, Instagram, and Google Display creative generation."
>
  <Header />

  <main class="coming-soon-page">
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero__content">
        <p class="hero__eyebrow">Coming Soon</p>
        <h1 class="hero__title">AI can generate images. Soon it'll know what actually converts.</h1>
        <p class="hero__subtitle">
          Platform specs. Best practices. The details that separate "looks nice" from "actually works."
        </p>
      </div>
    </section>

    <!-- What's Coming Section -->
    <section class="section">
      <div class="section__container">
        <h2 class="section__title">What you'll get</h2>
        <div class="features-grid">
          <div class="feature">
            <h3 class="feature__title">Meta & Instagram</h3>
            <p class="feature__description">
              Feed, Stories, Reels specs. Aspect ratios. Safe zones. Text overlay limits.
            </p>
          </div>
          <div class="feature">
            <h3 class="feature__title">Google Display</h3>
            <p class="feature__description">
              Responsive display specs. Performance Max asset requirements. What Google actually wants.
            </p>
          </div>
          <div class="feature">
            <h3 class="feature__title">Best practices</h3>
            <p class="feature__description">
              What converts, not just what's allowed. Patterns from thousands of tests.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Email Signup Section -->
    <section class="section section--cta">
      <div class="section__container">
        <EmailSignup
          title="Get notified when it's ready"
          description="Drop your email. You'll be first to know."
          buttonText="Notify me"
          variant="card"
          tag="ad-creative-interested"
        />
      </div>
    </section>

    <!-- Back Link -->
    <section class="section section--back">
      <div class="section__container">
        <a href="/skills" class="back-link">← Back to all skills</a>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  .coming-soon-page {
    display: flex;
    flex-direction: column;
  }

  /* Hero Section */
  .hero {
    padding: var(--space-16) var(--space-4) var(--space-10);
    text-align: center;
  }

  @media (min-width: 768px) {
    .hero {
      padding: var(--space-24) var(--space-8) var(--space-16);
    }
  }

  .hero__content {
    max-width: var(--container-md);
    margin: 0 auto;
  }

  .hero__eyebrow {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: var(--tracking-widest);
    margin-bottom: var(--space-3);
  }

  @media (min-width: 640px) {
    .hero__eyebrow {
      font-size: var(--text-sm);
      margin-bottom: var(--space-4);
    }
  }

  .hero__title {
    font-size: var(--text-2xl);
    font-weight: var(--font-black);
    letter-spacing: var(--tracking-tighter);
    margin-bottom: var(--space-5);
    color: var(--color-fg);
    line-height: var(--leading-tight);
  }

  @media (min-width: 480px) {
    .hero__title {
      font-size: var(--text-3xl);
    }
  }

  @media (min-width: 768px) {
    .hero__title {
      font-size: var(--text-4xl);
      margin-bottom: var(--space-6);
      letter-spacing: var(--tracking-tightest);
    }
  }

  .hero__subtitle {
    font-size: var(--text-base);
    color: var(--color-fg-secondary);
    line-height: var(--leading-relaxed);
    max-width: 50ch;
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .hero__subtitle {
      font-size: var(--text-lg);
    }
  }

  /* Sections */
  .section {
    padding: var(--space-10) var(--space-4);
  }

  @media (min-width: 768px) {
    .section {
      padding: var(--space-12) var(--space-8);
    }
  }

  .section__container {
    max-width: var(--container-lg);
    margin: 0 auto;
  }

  .section__title {
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    margin-bottom: var(--space-6);
    text-align: center;
  }

  @media (min-width: 768px) {
    .section__title {
      font-size: var(--text-2xl);
      margin-bottom: var(--space-8);
    }
  }

  /* Features Grid */
  .features-grid {
    display: grid;
    gap: var(--space-4);
  }

  @media (min-width: 640px) {
    .features-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: var(--space-6);
    }
  }

  .feature {
    padding: var(--space-5);
    background-color: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    text-align: center;
  }

  @media (min-width: 768px) {
    .feature {
      padding: var(--space-6);
    }
  }

  .feature__title {
    font-family: var(--font-sans);
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    margin-bottom: var(--space-2);
    color: var(--color-fg);
  }

  @media (min-width: 768px) {
    .feature__title {
      font-size: var(--text-lg);
    }
  }

  .feature__description {
    font-size: var(--text-sm);
    color: var(--color-fg-secondary);
    margin: 0;
    line-height: var(--leading-relaxed);
  }

  /* CTA Section */
  .section--cta {
    background-color: var(--color-bg-elevated);
  }

  .section--cta .section__container {
    max-width: var(--container-sm);
  }

  /* Back Section */
  .section--back {
    padding-bottom: var(--space-16);
  }

  .back-link {
    font-size: var(--text-sm);
    color: var(--color-fg-secondary);
    text-decoration: none;
    transition: color var(--duration-fast) var(--ease-out);
  }

  .back-link:hover {
    color: var(--color-accent);
  }
</style>
