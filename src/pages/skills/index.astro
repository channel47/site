---
/**
 * Skills Index Page
 *
 * Product catalog for Skill Suites.
 * Clean, minimal. Let the products speak.
 */

import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import EmailSignup from '../../components/EmailSignup.astro';
import SkillCard from '../../components/SkillCard.astro';

// Product data - add new products here
const products = [
  {
    title: 'Google Ads Skills',
    description: 'Ten years of media buying. One install.',
    category: 'google-ads',
    tier: 'premium' as const,
    price: 199,
    href: '/skills/google-ads',
  },
  {
    title: 'Ad Creative Skills',
    description: 'Platform specs, best practices, what actually converts.',
    category: 'creative',
    tier: 'premium' as const,
    href: '/skills/ad-creative',
  },
];
---

<BaseLayout
  title="Skill Suites â€” Channel47"
  description="Packaged expertise for AI tools. Browse skill files that teach Claude, Cursor, and other AI tools how to actually do the job."
>
  <Header />

  <main class="skills-index">
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero__content">
        <h1 class="hero__title">Expertise, packaged.</h1>
        <p class="hero__subtitle">
          Skill files that teach your AI tools how to actually do the job.
        </p>
      </div>
    </section>

    <!-- Products Grid -->
    <section class="products-section">
      <div class="products-grid">
        {products.map((product) => (
          <SkillCard
            title={product.title}
            description={product.description}
            href={product.href}
            category={product.category}
            tier={product.tier}
            price={product.price}
          />
        ))}
      </div>
    </section>

    <!-- Email Signup -->
    <section class="signup-section">
      <div class="signup-wrapper">
        <EmailSignup
          title="New skills in the works."
          description="Leave your email. We'll let you know when they're ready."
          buttonText="Subscribe"
          variant="card"
          tag="skills-browser"
        />
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  .skills-index {
    display: flex;
    flex-direction: column;
  }

  /* Hero Section */
  .hero {
    padding: var(--space-16) var(--space-4) var(--space-10);
    text-align: center;
  }

  @media (min-width: 768px) {
    .hero {
      padding: var(--space-24) var(--space-8) var(--space-16);
    }
  }

  .hero__content {
    max-width: var(--container-md);
    margin: 0 auto;
  }

  .hero__title {
    font-size: var(--text-3xl);
    font-weight: var(--font-black);
    letter-spacing: var(--tracking-tighter);
    margin-bottom: var(--space-4);
    color: var(--color-fg);
    line-height: var(--leading-tight);
  }

  @media (min-width: 480px) {
    .hero__title {
      font-size: var(--text-4xl);
    }
  }

  @media (min-width: 768px) {
    .hero__title {
      font-size: var(--text-5xl);
      letter-spacing: var(--tracking-tightest);
    }
  }

  .hero__subtitle {
    font-size: var(--text-base);
    color: var(--color-fg-secondary);
    line-height: var(--leading-relaxed);
    max-width: 45ch;
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .hero__subtitle {
      font-size: var(--text-lg);
    }
  }

  /* Products Section */
  .products-section {
    padding: var(--space-8) var(--space-4);
  }

  @media (min-width: 768px) {
    .products-section {
      padding: var(--space-12) var(--space-8);
    }
  }

  .products-grid {
    display: grid;
    gap: var(--space-4);
    max-width: var(--container-lg);
    margin: 0 auto;
  }

  @media (min-width: 640px) {
    .products-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-6);
    }
  }

  /* Signup Section */
  .signup-section {
    padding: var(--space-8) var(--space-4);
    padding-bottom: var(--space-16);
    background-color: var(--color-bg-elevated);
  }

  @media (min-width: 768px) {
    .signup-section {
      padding: var(--space-12) var(--space-8);
      padding-bottom: var(--space-20);
    }
  }

  .signup-wrapper {
    max-width: var(--container-sm);
    margin: 0 auto;
  }
</style>
