---
/**
 * EmailSignup Component
 *
 * Beehiiv-ready email capture form with context-aware default copy.
 */

interface Props {
  title?: string;
  description?: string;
  buttonText?: string;
  variant?: 'inline' | 'card';
  tag?: string;
  context?: 'tool' | 'blog' | 'homepage';
  class?: string;
}

const {
  tag = 'general',
  context = 'homepage',
  variant = 'card',
  class: className = ''
} = Astro.props;

const defaultCopy = {
  homepage: {
    title: "Get the newsletter",
    description: "Open-source AI tools, workflow tips, and what I'm building. No spam.",
    button: "Subscribe"
  },
  tool: {
    title: "Get notified of updates",
    description: "New features, fixes, and tips for this tool.",
    button: "Subscribe"
  },
  blog: {
    title: "More like this",
    description: "Weekly AI tooling insights for marketers and builders.",
    button: "Subscribe"
  }
};

const defaults = defaultCopy[context] || defaultCopy.homepage;
const title = Astro.props.title || defaults.title;
const description = Astro.props.description || defaults.description;
const buttonText = Astro.props.buttonText || defaults.button;

// Generate unique ID for this form instance
const formId = `email-signup-${Math.random().toString(36).substr(2, 9)}`;
---

<div class:list={['email-signup', `email-signup--${variant}`, className]}>
  {variant === 'card' && (
    <div class="email-signup__content">
      <h3 class="email-signup__title">{title}</h3>
      <p class="email-signup__description">{description}</p>
    </div>
  )}

  <form
    id={formId}
    class="email-signup__form"
    data-signup-form
    data-tag={tag}
  >
    <div class="email-signup__input-group">
      <label for={`${formId}-email`} class="visually-hidden">Email address</label>
      <input
        type="email"
        id={`${formId}-email`}
        name="email"
        placeholder="you@example.com"
        required
        class="email-signup__input"
      />
      <button type="submit" class="email-signup__button">
        <span class="email-signup__button-text">{buttonText}</span>
        <span class="email-signup__button-loading" style="display: none;">...</span>
      </button>
    </div>
    <div class="email-signup__message" role="status" aria-live="polite"></div>
    <p class="email-signup__privacy">
      No spam. Unsubscribe anytime.
    </p>
  </form>
</div>

<script>
  document.addEventListener('astro:page-load', () => {
    const forms = document.querySelectorAll('[data-signup-form]');

    // Email validation regex (matches server-side)
    const EMAIL_REGEX = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

    function validateEmail(email: string): boolean {
      if (!email || email.length > 254) return false;
      return EMAIL_REGEX.test(email.trim());
    }

    forms.forEach((form) => {
      if (form.hasAttribute('data-initialized')) return;
      form.setAttribute('data-initialized', 'true');

      const formElement = form as HTMLFormElement;
      const emailInput = formElement.querySelector('input[name="email"]') as HTMLInputElement;

      // Real-time validation feedback
      emailInput.addEventListener('blur', () => {
        const email = emailInput.value.trim();
        if (email && !validateEmail(email)) {
          emailInput.setCustomValidity('Please enter a valid email address');
          emailInput.reportValidity();
        } else {
          emailInput.setCustomValidity('');
        }
      });

      // Clear validation on input
      emailInput.addEventListener('input', () => {
        emailInput.setCustomValidity('');
      });

      form.addEventListener('submit', async (e) => {
        e.preventDefault();

        const submitButton = formElement.querySelector('button[type="submit"]') as HTMLButtonElement;
        const buttonText = submitButton.querySelector('.email-signup__button-text') as HTMLElement;
        const buttonLoading = submitButton.querySelector('.email-signup__button-loading') as HTMLElement;
        const messageDiv = formElement.querySelector('.email-signup__message') as HTMLElement;
        const tag = formElement.dataset.tag;

        // Clear previous messages
        messageDiv.textContent = '';
        messageDiv.className = 'email-signup__message';

        // Client-side validation
        const email = emailInput.value.trim();
        if (!validateEmail(email)) {
          messageDiv.textContent = 'Please enter a valid email address';
          messageDiv.classList.add('email-signup__message--error');
          emailInput.focus();
          return;
        }

        // Show loading state
        submitButton.disabled = true;
        buttonText.style.display = 'none';
        buttonLoading.style.display = 'inline';

        try {
          const response = await fetch('/api/subscribe', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({
              email: email,
              tag: tag || 'general'
            }),
          });

          const data = await response.json();

          if (response.ok) {
            // Success
            messageDiv.textContent = data.message || 'Successfully subscribed!';
            messageDiv.classList.add('email-signup__message--success');
            emailInput.value = '';
          } else {
            // Error from API
            messageDiv.textContent = data.message || 'Subscription failed. Please try again.';
            messageDiv.classList.add('email-signup__message--error');
          }
        } catch (error) {
          // Network or other error
          messageDiv.textContent = 'An error occurred. Please try again later.';
          messageDiv.classList.add('email-signup__message--error');
        } finally {
          // Reset button state
          submitButton.disabled = false;
          buttonText.style.display = 'inline';
          buttonLoading.style.display = 'none';
        }
      });
    });
  });
</script>

<style>
  .email-signup {
    width: 100%;
  }

  .email-signup--card {
    padding: var(--space-6);
    background-color: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-left: 3px solid var(--color-accent);
    border-radius: var(--radius-xl);
  }

  @media (min-width: 640px) {
    .email-signup--card {
      padding: var(--space-8);
    }
  }

  .email-signup__content {
    text-align: center;
    margin-bottom: var(--space-6);
  }

  .email-signup__title {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    font-weight: var(--font-semibold);
    color: var(--color-fg);
    margin-bottom: var(--space-2);
    line-height: var(--leading-tight);
  }

  @media (min-width: 640px) {
    .email-signup__title {
      font-size: var(--text-2xl);
    }
  }

  .email-signup__description {
    font-size: var(--text-sm);
    color: var(--color-fg-secondary);
    margin: 0;
    line-height: var(--leading-relaxed);
  }

  @media (min-width: 640px) {
    .email-signup__description {
      font-size: var(--text-base);
    }
  }

  .email-signup__form {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .email-signup__input-group {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  @media (min-width: 480px) {
    .email-signup__input-group {
      flex-direction: row;
    }
  }

  .email-signup__input {
    flex: 1;
    padding: var(--space-4);
    font-family: var(--font-sans);
    font-size: var(--text-base);
    color: var(--color-fg);
    background-color: var(--color-void);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    outline: none;
    /* Touch-friendly height */
    min-height: 52px;
    -webkit-tap-highlight-color: transparent;
    transition:
      border-color var(--duration-fast) var(--ease-out),
      box-shadow var(--duration-fast) var(--ease-out);
  }

  .email-signup__input::placeholder {
    color: var(--color-fg-muted);
  }

  .email-signup__input:focus {
    border-color: var(--color-accent);
    box-shadow: 0 0 0 3px var(--color-accent-subtle);
  }

  .email-signup__button {
    padding: var(--space-4) var(--space-6);
    font-family: var(--font-display);
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    color: var(--color-fg-inverse);
    background-color: var(--color-accent);
    border: none;
    border-radius: var(--radius-lg);
    cursor: pointer;
    white-space: nowrap;
    /* Touch-friendly height */
    min-height: 52px;
    -webkit-tap-highlight-color: transparent;
    transition:
      transform var(--duration-fast) var(--ease-out),
      background-color var(--duration-fast) var(--ease-out),
      box-shadow var(--duration-fast) var(--ease-out);
  }

  .email-signup__button:hover {
    background-color: var(--color-accent-hover);
    box-shadow: 0 2px 8px oklch(70% 0.15 30 / 0.3);
  }

  .email-signup__button:active {
    transform: scale(0.97);
    box-shadow: none;
  }

  .email-signup__button:focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
    box-shadow: 0 0 0 4px var(--color-accent-subtle);
  }

  .email-signup__message {
    font-size: var(--text-sm);
    text-align: center;
    padding: var(--space-2);
    border-radius: var(--radius-md);
    margin: 0;
    min-height: 1.5em;
  }

  .email-signup__message--success {
    color: var(--color-success, #16a34a);
    background-color: var(--color-success-bg, oklch(95% 0.05 145));
  }

  .email-signup__message--error {
    color: var(--color-error, #dc2626);
    background-color: var(--color-error-bg, oklch(95% 0.05 25));
  }

  .email-signup__button-loading {
    animation: pulse 1.5s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }

  .email-signup__button:disabled {
    opacity: 0.7;
    cursor: not-allowed;
  }

  .email-signup__privacy {
    font-size: var(--text-xs);
    color: var(--color-fg-muted);
    text-align: center;
    margin: 0;
  }

  .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .email-signup__button {
      transition: none;
    }

    .email-signup__button:active {
      transform: none;
    }
  }
</style>
