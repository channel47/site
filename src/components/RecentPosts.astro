---
/**
 * RecentPosts Component
 *
 * Displays recent blog posts from the content collection.
 * Used on the homepage to showcase latest content.
 */

import { getCollection } from 'astro:content';
import Card from './Card.astro';

interface Props {
  count?: number;
}

const { count = 3 } = Astro.props;

// Fetch recent posts from content collection
const posts = (await getCollection('posts'))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, count);

const formatDate = (date: Date) =>
  new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
  }).format(date);
---

{posts.length > 0 && (
  <section class="recent-posts" data-animate="fade-up">
    <div class="recent-posts__header">
      <h2 class="recent-posts__title">Latest from the blog</h2>
      <a href="/blog" class="recent-posts__link">View all &rarr;</a>
    </div>

    <div class="recent-posts__grid">
      {posts.map((post) => (
        <Card href={`/blog/${post.slug}`} variant="ghost">
          <time class="card__date" datetime={post.data.date.toISOString()}>
            {formatDate(post.data.date)}
          </time>
          <h3 class="card__title">{post.data.title}</h3>
          {post.data.description && (
            <p class="card__description">{post.data.description}</p>
          )}
        </Card>
      ))}
    </div>
  </section>
)}

<style>
  .recent-posts {
    padding: 0 var(--space-4);
    max-width: var(--container-lg);
    margin: 0 auto var(--space-10);
    width: 100%;
  }

  @media (min-width: 768px) {
    .recent-posts {
      padding: 0 var(--space-8);
      margin-bottom: var(--space-16);
    }
  }

  .recent-posts__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: var(--space-6);
    gap: var(--space-4);
  }

  .recent-posts__title {
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
    color: var(--color-fg);
    margin: 0;
  }

  @media (min-width: 768px) {
    .recent-posts__title {
      font-size: var(--text-xl);
    }
  }

  .recent-posts__link {
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    color: var(--color-fg-secondary);
    text-decoration: none;
    white-space: nowrap;
  }

  .recent-posts__link:hover {
    color: var(--color-accent);
    text-decoration: underline;
  }

  .recent-posts__grid {
    display: grid;
    gap: var(--space-4);
  }

  @media (min-width: 640px) {
    .recent-posts__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-5);
    }
  }

  @media (min-width: 1024px) {
    .recent-posts__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .card__date {
    display: block;
    font-size: var(--text-xs);
    color: var(--color-fg-muted);
    margin-bottom: var(--space-2);
  }

  .card__title {
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    line-height: var(--leading-snug);
    margin-bottom: var(--space-2);
  }

  .card__description {
    font-size: var(--text-sm);
    color: var(--color-fg-secondary);
    line-height: var(--leading-relaxed);
  }
</style>
