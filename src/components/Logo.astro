---
/**
 * Logo Component
 *
 * 47 in block style with subtle glow effect.
 */

interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<span class={`logo ${className || ''}`.trim()} role="img" aria-label="CH47 Logo">
  <span class="logo__glyph" aria-hidden="true">
    <span class="logo__line">█ █ ▀▀█</span>
    <span class="logo__line">▀▀█  █</span>
  </span>
</span>

<style>
  .logo {
    --logo-glow: color-mix(in srgb, var(--color-fg) 35%, transparent);
    --logo-glow-mid: color-mix(in srgb, var(--color-fg) 50%, transparent);

    display: inline-flex;
    flex-direction: column;
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    line-height: 1;
    font-weight: normal;
    color: var(--color-fg);
    white-space: pre;
    user-select: none;
    letter-spacing: -0.08em;
  }

  .logo__glyph {
    display: flex;
    flex-direction: column;
    text-shadow:
      0 0 1px var(--logo-glow-mid),
      0 0 4px var(--logo-glow),
      0 0 10px color-mix(in srgb, var(--color-fg) 15%, transparent);
  }

  .logo__line {
    display: block;
    height: 1em;
    font-variant-ligatures: none;
    font-feature-settings: normal;
  }
</style>
