---
/**
 * Logo — 47 in block style with subtle glow effect.
 */
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<span class:list={['inline-flex flex-col font-mono text-xs leading-none text-gray-700 whitespace-pre select-none', className]} role="img" aria-label="CH47 Logo" style="letter-spacing: -0.08em;">
  <span class="flex flex-col" style="text-shadow: 0 0 1px rgba(231,229,228,0.5), 0 0 4px rgba(231,229,228,0.35), 0 0 10px rgba(231,229,228,0.15);">
    <span class="block h-[1em]" style="font-variant-ligatures: none;">█ █ ▀▀█</span>
    <span class="block h-[1em]" style="font-variant-ligatures: none;">▀▀█  █</span>
  </span>
</span>
