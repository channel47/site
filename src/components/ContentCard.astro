---
/**
 * ContentCard â€” reusable note card for /notes grid and homepage feature.
 * Tag pill, title, date, description. Links to /notes/{slug}.
 */

interface Props {
  title: string;
  description: string;
  date: Date;
  tag: 'breakdown' | 'story' | 'guide';
  slug: string;
  class?: string;
}

const { title, description, date, tag, slug, class: className } = Astro.props;

const formatted = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});

const tagLabel = tag.toUpperCase();
---

<a href={`/notes/${slug}`} class:list={['card', className]}>
  <div class="card__meta">
    <span class:list={['card__tag', `card__tag--${tag}`]}>{tagLabel}</span>
    <time class="card__date" datetime={date.toISOString()}>{formatted}</time>
  </div>
  <h3 class="card__title">{title}</h3>
  <p class="card__desc">{description}</p>
</a>

<style>
  .card {
    display: block;
    padding: 20px 0;
    border-bottom: 1px solid var(--color-border);
    text-decoration: none;
    color: inherit;
    transition: border-color var(--duration-fast) var(--ease-out);
  }

  .card:hover {
    border-color: var(--color-accent);
    text-decoration: none;
  }

  .card__meta {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 8px;
  }

  .card__tag {
    font-family: var(--font-mono);
    font-size: 10px;
    font-weight: 600;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    padding: 2px 8px;
    border-radius: 2px;
    background: var(--color-bg-elevated);
    color: var(--color-fg-muted);
  }

  .card__tag--breakdown {
    background: var(--color-accent-subtle);
    color: var(--color-accent);
  }

  .card__date {
    font-family: var(--font-mono);
    font-size: 11px;
    color: var(--color-fg-muted);
    letter-spacing: 0.05em;
  }

  .card__title {
    font-family: var(--font-display);
    font-size: clamp(1.1rem, 2vw, 1.35rem);
    font-weight: 600;
    letter-spacing: -0.02em;
    line-height: 1.2;
    color: var(--color-fg-emphasis);
    margin-bottom: 6px;
    transition: color var(--duration-fast) var(--ease-out);
  }

  .card:hover .card__title {
    color: var(--color-accent);
  }

  .card__desc {
    font-family: var(--font-mono);
    font-size: 13px;
    line-height: 1.6;
    color: var(--color-fg-secondary);
    letter-spacing: 0.02em;
  }
</style>
