---
/**
 * ToolCard Component
 *
 * Card for displaying tools with a practical, functional feel.
 * Nearly identical to SkillCard but with understated styling:
 * muted CTA color and simple border hover.
 */

interface Props {
  name: string;
  description: string;
  href?: string;
  label?: string;
  available?: boolean;
  class?: string;
}

const {
  name,
  description,
  href,
  label = 'Tool',
  available = true,
  class: className,
} = Astro.props;

const Tag = available && href ? 'a' : 'div';
const linkProps = available && href ? { href } : {};
---

<Tag
  class:list={[
    'tool-card',
    { 'tool-card--disabled': !available },
    className,
  ]}
  {...linkProps}
  aria-disabled={!available ? 'true' : undefined}
>
  <span class="tool-card__badge">Free</span>

  <span class="tool-card__label">{label}</span>

  <h3 class="tool-card__title">{name}</h3>
  <p class="tool-card__description">{description}</p>

  <div class="tool-card__footer">
    <span class="tool-card__cta">
      {available ? 'Setup guide' : 'Coming soon'}
      {available && <span class="tool-card__arrow" aria-hidden="true">â†’</span>}
    </span>
  </div>
</Tag>

<style>
  .tool-card {
    position: relative;
    display: flex;
    flex-direction: column;
    padding: var(--space-5);
    background: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    text-decoration: none;
    color: inherit;
    overflow: hidden;
    -webkit-tap-highlight-color: transparent;
    box-shadow: 0 1px 3px oklch(0% 0 0 / 0.08);
    transition:
      transform var(--duration-normal) var(--ease-out),
      box-shadow var(--duration-normal) var(--ease-out),
      border-color var(--duration-normal) var(--ease-out);
  }

  @media (min-width: 640px) {
    .tool-card {
      padding: var(--space-6);
    }
  }

  .tool-card:not(.tool-card--disabled) {
    cursor: pointer;
  }

  .tool-card:not(.tool-card--disabled):hover {
    transform: translateY(-2px);
    border-color: var(--color-fg-muted);
    box-shadow:
      0 8px 20px oklch(0% 0 0 / 0.12),
      0 4px 8px oklch(0% 0 0 / 0.08);
  }

  .tool-card:not(.tool-card--disabled):active {
    transform: scale(0.98);
  }

  .tool-card:not(.tool-card--disabled):focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
  }

  .tool-card--disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }

  /* Badge - positioned in top-right corner */
  .tool-card__badge {
    position: absolute;
    top: 0;
    right: 0;
    font-family: var(--font-sans);
    font-size: var(--text-xs);
    font-weight: var(--font-semibold);
    padding: var(--space-2) var(--space-3);
    border-bottom-left-radius: var(--radius-lg);
    background: oklch(from var(--color-success) l c h / 0.15);
    color: var(--color-success);
  }

  /* Label */
  .tool-card__label {
    font-family: var(--font-sans);
    font-size: var(--text-xs);
    font-weight: var(--font-medium);
    color: var(--color-fg-muted);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
    margin-bottom: var(--space-3);
  }

  /* Content */
  .tool-card__title {
    font-family: var(--font-sans);
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
    color: var(--color-fg);
    margin: 0 0 var(--space-2) 0;
    line-height: var(--leading-tight);
  }

  @media (min-width: 640px) {
    .tool-card__title {
      font-size: var(--text-xl);
    }
  }

  .tool-card__description {
    font-family: var(--font-sans);
    font-size: var(--text-sm);
    color: var(--color-fg-secondary);
    line-height: var(--leading-relaxed);
    margin: 0;
    flex: 1;
  }

  /* Footer */
  .tool-card__footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: var(--space-4);
    margin-top: var(--space-4);
    border-top: 1px solid var(--color-border-subtle);
  }

  .tool-card__cta {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-family: var(--font-sans);
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    color: var(--color-fg-muted);
    transition: color var(--duration-fast) var(--ease-out);
  }

  .tool-card:not(.tool-card--disabled):hover .tool-card__cta {
    color: var(--color-fg-secondary);
  }

  .tool-card__arrow {
    transition: transform var(--duration-fast) var(--ease-out);
  }

  .tool-card:not(.tool-card--disabled):hover .tool-card__arrow {
    transform: translateX(3px);
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .tool-card,
    .tool-card__cta,
    .tool-card__arrow {
      transition: none;
    }

    .tool-card:not(.tool-card--disabled):hover,
    .tool-card:not(.tool-card--disabled):active {
      transform: none;
    }

    .tool-card:not(.tool-card--disabled):hover .tool-card__arrow {
      transform: none;
    }
  }
</style>
