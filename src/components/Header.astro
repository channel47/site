---
/**
 * Header Component
 *
 * Minimal site header with full-screen mobile navigation.
 */

import Logo from './Logo.astro';

interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<header class={`header ${className || ''}`.trim()}>
  <div class="header__container">
    <a href="/" class="header__logo">
      <Logo />
    </a>

    <!-- Desktop navigation -->
    <nav class="header__nav-desktop">
      <a href="/skills" class="header__link">Skills</a>
      <a href="/tools" class="header__link">Tools</a>
      <a href="/blog" class="header__link">Blog</a>
      <a href="/skills" class="header__link header__link--cta">Get Skills</a>
    </nav>

    <!-- Mobile menu button -->
    <button
      class="header__menu-btn"
      aria-label="Open menu"
      aria-expanded="false"
      aria-controls="mobile-menu"
    >
      <svg class="header__menu-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round">
        <line x1="4" y1="7" x2="20" y2="7" />
        <line x1="4" y1="17" x2="20" y2="17" />
      </svg>
    </button>
  </div>

  <!-- Mobile menu overlay -->
  <div class="mobile-menu" id="mobile-menu" aria-hidden="true">
    <div class="mobile-menu__inner">
      <!-- Header with logo and close -->
      <div class="mobile-menu__header">
        <a href="/" class="mobile-menu__logo">
          <Logo />
        </a>
        <button class="mobile-menu__close" aria-label="Close menu">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round">
            <line x1="6" y1="6" x2="18" y2="18" />
            <line x1="6" y1="18" x2="18" y2="6" />
          </svg>
        </button>
      </div>

      <!-- Navigation links -->
      <nav class="mobile-menu__nav">
        <a href="/skills" class="mobile-menu__link">Skills</a>
        <a href="/tools" class="mobile-menu__link">Tools</a>
        <a href="/blog" class="mobile-menu__link">Blog</a>
        <a href="/skills" class="mobile-menu__link mobile-menu__link--cta">Get Skills</a>
      </nav>
    </div>
  </div>
</header>

<script>
  const menuBtn = document.querySelector('.header__menu-btn');
  const closeBtn = document.querySelector('.mobile-menu__close');
  const mobileMenu = document.getElementById('mobile-menu');
  const header = document.querySelector('.header') as HTMLElement;

  // ===================
  // Mobile Menu
  // ===================
  function openMenu() {
    mobileMenu?.classList.add('mobile-menu--open');
    mobileMenu?.setAttribute('aria-hidden', 'false');
    menuBtn?.setAttribute('aria-expanded', 'true');
    header?.classList.add('header--menu-open');
    document.body.style.overflow = 'hidden';
    closeBtn?.focus();
  }

  function closeMenu() {
    mobileMenu?.classList.remove('mobile-menu--open');
    mobileMenu?.setAttribute('aria-hidden', 'true');
    menuBtn?.setAttribute('aria-expanded', 'false');
    header?.classList.remove('header--menu-open');
    document.body.style.overflow = '';
  }

  menuBtn?.addEventListener('click', openMenu);
  closeBtn?.addEventListener('click', () => {
    closeMenu();
    menuBtn?.focus();
  });

  mobileMenu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', closeMenu);
  });

  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && mobileMenu?.classList.contains('mobile-menu--open')) {
      closeMenu();
      menuBtn?.focus();
    }
  });

  window.matchMedia('(min-width: 640px)').addEventListener('change', (e) => {
    if (e.matches) closeMenu();
  });

  // ===================
  // Scroll Hide/Show
  // ===================
  const SCROLL_THRESHOLD = 10;
  const HIDE_OFFSET = 100; // Don't hide until scrolled past this point
  let lastScrollY = 0;
  let ticking = false;

  function updateHeader() {
    const currentScrollY = window.scrollY;
    const isMenuOpen = header?.classList.contains('header--menu-open');

    // Don't hide if menu is open or at top of page
    if (isMenuOpen || currentScrollY < HIDE_OFFSET) {
      header?.classList.remove('header--hidden');
      lastScrollY = currentScrollY;
      ticking = false;
      return;
    }

    const scrollDelta = currentScrollY - lastScrollY;

    if (scrollDelta > SCROLL_THRESHOLD) {
      // Scrolling down - hide header
      header?.classList.add('header--hidden');
    } else if (scrollDelta < -SCROLL_THRESHOLD) {
      // Scrolling up - show header
      header?.classList.remove('header--hidden');
    }

    lastScrollY = currentScrollY;
    ticking = false;
  }

  // Respect reduced motion preference
  const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

  if (!prefersReducedMotion) {
    window.addEventListener('scroll', () => {
      if (!ticking) {
        requestAnimationFrame(updateHeader);
        ticking = true;
      }
    }, { passive: true });
  }
</script>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: var(--z-header);
    background-color: var(--color-bg);
    border-bottom: 1px solid var(--color-border-subtle);
    transition: transform var(--duration-normal) var(--ease-out);
  }

  .header--hidden {
    transform: translateY(-100%);
  }

  @media (prefers-reduced-motion: reduce) {
    .header {
      transition: none;
    }
  }

  .header__container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: var(--container-lg);
    margin: 0 auto;
    padding: var(--space-4);
    min-height: 64px;
  }

  /* Logo */
  .header__logo {
    text-decoration: none;
    display: flex;
    align-items: center;
    min-height: 48px;
    padding: var(--space-2);
    margin-left: calc(-1 * var(--space-2));
    border-radius: var(--radius-md);
    -webkit-tap-highlight-color: transparent;
  }

  .header__logo:hover :global(.logo) {
    color: var(--color-accent);
  }

  .header__logo:hover :global(.logo__47) {
    color: var(--color-accent-muted);
  }

  /* Desktop navigation */
  .header__nav-desktop {
    display: none;
    align-items: center;
    gap: var(--space-1);
  }

  @media (min-width: 640px) {
    .header__nav-desktop {
      display: flex;
    }
  }

  .header__link {
    font-family: var(--font-sans);
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    color: var(--color-fg-secondary);
    text-decoration: none;
    padding: var(--space-2) var(--space-3);
    border-radius: var(--radius-md);
    transition: all var(--duration-fast) var(--ease-out);
  }

  .header__link:hover {
    color: var(--color-fg);
    background-color: var(--color-bg-hover);
  }

  .header__link--cta {
    color: var(--color-accent);
    font-weight: var(--font-semibold);
  }

  .header__link--cta:hover {
    color: var(--color-accent-hover);
    background-color: var(--color-accent-subtle);
  }

  /* Mobile menu button */
  .header__menu-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    color: var(--color-fg);
    background: none;
    border: none;
    border-radius: var(--radius-md);
    cursor: pointer;
    margin-right: calc(-1 * var(--space-2));
    -webkit-tap-highlight-color: transparent;
  }

  .header__menu-btn:hover {
    background-color: var(--color-bg-hover);
  }

  .header__menu-btn:focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
  }

  @media (min-width: 640px) {
    .header__menu-btn {
      display: none;
    }
  }

  /* Mobile menu overlay */
  .mobile-menu {
    position: fixed;
    inset: 0;
    z-index: var(--z-modal);
    background-color: var(--color-bg);
    opacity: 0;
    visibility: hidden;
    transition:
      opacity var(--duration-normal) var(--ease-out),
      visibility var(--duration-normal) var(--ease-out);
  }

  .mobile-menu--open {
    opacity: 1;
    visibility: visible;
  }

  .mobile-menu__inner {
    display: flex;
    flex-direction: column;
    min-height: 100%;
    padding: var(--space-4);
  }

  /* Mobile menu header */
  .mobile-menu__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    min-height: 48px;
  }

  /* Mobile menu logo */
  .mobile-menu__logo {
    display: flex;
    align-items: center;
    text-decoration: none;
    padding: var(--space-2);
    margin-left: calc(-1 * var(--space-2));
  }

  /* Close button */
  .mobile-menu__close {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    color: var(--color-fg);
    background-color: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-full);
    cursor: pointer;
    margin-right: calc(-1 * var(--space-2));
    -webkit-tap-highlight-color: transparent;
    transition: all var(--duration-fast) var(--ease-out);
  }

  .mobile-menu__close:hover {
    background-color: var(--color-bg-hover);
    border-color: var(--color-fg-muted);
  }

  .mobile-menu__close:focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
  }

  /* Navigation */
  .mobile-menu__nav {
    display: flex;
    flex-direction: column;
    justify-content: center;
    flex: 1;
    gap: var(--space-2);
    padding: var(--space-8) 0;
  }

  .mobile-menu__link {
    font-family: var(--font-sans);
    font-size: var(--text-2xl);
    font-weight: var(--font-semibold);
    color: var(--color-fg);
    text-decoration: none;
    padding: var(--space-4) var(--space-4);
    border-radius: var(--radius-lg);
    -webkit-tap-highlight-color: transparent;
    transition: all var(--duration-fast) var(--ease-out);
  }

  .mobile-menu__link:hover {
    background-color: var(--color-bg-elevated);
  }

  .mobile-menu__link:active {
    background-color: var(--color-bg-hover);
  }

  .mobile-menu__link--cta {
    color: var(--color-accent);
  }

  .mobile-menu__link--cta:hover {
    background-color: var(--color-accent-subtle);
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .mobile-menu {
      transition: none;
    }
  }

  /* Hide mobile menu on desktop */
  @media (min-width: 640px) {
    .mobile-menu {
      display: none;
    }
  }
</style>
