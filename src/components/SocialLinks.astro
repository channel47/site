---
/**
 * SocialLinks
 * Quiet utilities row: text, monospace, minimal emphasis.
 */
interface Props {
  class?: string;
}

const { class: className } = Astro.props;

const links = [
  { name: 'X', href: 'https://x.com/ctrlswing' },
  { name: 'Substack', href: 'https://substack.com/@ctrlswing' },
  { name: 'GitHub', href: 'https://github.com/ctrlswing' },
  { name: 'LinkedIn', href: 'https://www.linkedin.com/in/jackson-d-9979a7a0/' },
];
---

<nav class:list={['social-links', className]} aria-label="Links">
  <ul class="social-links__list">
    {links.map((link) => (
      <li class="social-links__item">
        <a
          href={link.href}
          class="social-links__link"
          target="_blank"
          rel="noopener noreferrer"
        >
          {link.name}
        </a>
      </li>
    ))}
  </ul>
</nav>

<style>
  .social-links__list {
    list-style: none;
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-4);
    padding: 0;
    margin: 0;
  }

  .social-links__link {
    display: inline-flex;
    align-items: center;
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    letter-spacing: var(--tracking-wide);
    color: var(--color-fg-muted);
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition:
      color var(--duration-normal) var(--ease-out),
      border-color var(--duration-normal) var(--ease-out),
      transform var(--duration-fast) var(--ease-out);
  }

  .social-links__link:hover {
    color: var(--color-fg);
    border-color: color-mix(in oklch, var(--color-accent) 70%, transparent);
    transform: translateY(-1px);
  }

  .social-links__link:active {
    transform: translateY(0);
  }

  .social-links__link:focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: 3px;
    border-radius: 2px;
  }

  @media (prefers-reduced-motion: reduce) {
    .social-links__link {
      transition:
        color var(--duration-normal) var(--ease-out),
        border-color var(--duration-normal) var(--ease-out);
    }

    .social-links__link:hover,
    .social-links__link:active {
      transform: none;
    }
  }
</style>

