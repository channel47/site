---
/**
 * SocialLinks â€” pipe-separated social links.
 */
interface Props {
  class?: string;
}

const { class: className } = Astro.props;

const links = [
  { name: 'GitHub', href: 'https://github.com/channel47/plugins' },
  { name: 'X', href: 'https://x.com/ctrlswing' },
  { name: 'LinkedIn', href: 'https://www.linkedin.com/in/jackson-d-9979a7a0/' },
];
---

<ul class:list={['flex items-center gap-4 list-none p-0 m-0', className]} role="list">
  {links.map((link, i) => (
    <li class:list={[i > 0 && 'pl-4 border-l border-gray-200']}>
      <a
        href={link.href}
        class="font-mono text-[13px] tracking-wide text-gray-500 hover:text-amber transition-colors duration-100 relative"
        target="_blank"
        rel="noopener noreferrer"
      >
        {link.name}
      </a>
    </li>
  ))}
</ul>
