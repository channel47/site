---
/**
 * Footer Component
 *
 * Minimal site footer with consistent branding.
 */

import Logo from './Logo.astro';

interface Props {
  class?: string;
}

const { class: className } = Astro.props;
const currentYear = new Date().getFullYear();
---

<footer class={`footer ${className || ''}`.trim()}>
  <div class="footer__container">
    <div class="footer__content">
      <Logo />
      <p class="footer__tagline">Open-source AI tools for marketers.</p>
    </div>

    <nav class="footer__nav">
      <a href="/tools" class="footer__link">Tools</a>
      <a href="/blog" class="footer__link">Blog</a>
      <a href="https://github.com/channel47/channel47" class="footer__link">GitHub</a>
      <a href="mailto:support@channel47.dev" class="footer__link">Contact</a>
    </nav>

    <p class="footer__copyright">
      &copy; {currentYear} Channel47
    </p>
  </div>
</footer>

<style>
  .footer {
    border-top: 1px solid var(--color-border-subtle);
    padding: var(--space-6) var(--space-4);
    margin-top: auto;
  }

  @media (min-width: 768px) {
    .footer {
      padding: var(--space-8) var(--space-8);
    }
  }

  .footer__container {
    display: flex;
    flex-direction: column;
    gap: var(--space-5);
    max-width: var(--container-lg);
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .footer__container {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      gap: var(--space-4);
    }
  }

  .footer__content {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .footer__tagline {
    font-size: var(--text-sm);
    color: var(--color-fg-muted);
    margin: 0;
  }

  .footer__nav {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-1);
    margin: calc(-1 * var(--space-2));
  }

  .footer__link {
    font-family: var(--font-sans);
    font-size: var(--text-sm);
    color: var(--color-fg-secondary);
    text-decoration: none;
    padding: var(--space-2) var(--space-3);
    border-radius: var(--radius-md);
    min-height: 44px;
    display: inline-flex;
    align-items: center;
    -webkit-tap-highlight-color: transparent;
    transition: color var(--duration-fast) var(--ease-out);
  }

  .footer__link:hover {
    color: var(--color-fg);
  }

  @media (min-width: 768px) {
    .footer__link {
      min-height: auto;
    }
  }

  .footer__copyright {
    font-size: var(--text-xs);
    color: var(--color-fg-muted);
    margin: 0;
  }

  @media (min-width: 768px) {
    .footer__copyright {
      order: -1;
    }
  }
</style>
