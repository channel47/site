/**
 * Footer â€” Notes + Privacy left, attribution right.
 */
---

<footer class="footer">
  <div class="footer__inner">
    <div class="footer__left">
      <a href="/notes" class="footer__link">Notes</a>
      <span class="footer__pipe" aria-hidden="true"></span>
      <a href="/privacy" class="footer__link">Privacy</a>
    </div>
    <span class="footer__attr">Built by <a href="https://x.com/ctrlswing" target="_blank" rel="noopener noreferrer" class="footer__link">jackson</a></span>
  </div>
</footer>

<style>
  .footer {
    border-top: 1px solid var(--color-smoke);
    padding: 40px 0 calc(40px + env(safe-area-inset-bottom, 0px));
  }
  .footer__inner {
    max-width: 1060px;
    margin: 0 auto;
    padding: 0 clamp(24px, 5vw, 64px);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .footer__left {
    display: flex;
    align-items: center;
    gap: 16px;
  }
  .footer__pipe {
    width: 1px;
    height: 14px;
    background: var(--color-smoke);
  }
  .footer__link {
    font-family: var(--font-family-mono);
    font-size: 12px;
    color: var(--color-stone);
    letter-spacing: 0.04em;
    text-decoration: none;
    transition: color 0.1s;
  }
  .footer__link:hover {
    color: var(--color-signal);
  }
  .footer__link:focus-visible {
    outline: 2px solid var(--color-signal);
    outline-offset: 2px;
    border-radius: var(--radius-tight);
  }
  .footer__attr {
    font-family: var(--font-family-mono);
    font-size: 12px;
    color: var(--color-stone);
    letter-spacing: 0.04em;
  }
</style>
