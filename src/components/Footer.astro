---
/**
 * Footer — shared site footer.
 * Two rows: page links top, attribution + socials bottom.
 * CH47 mark has a hover scramble — characters cycle through
 * random glyphs before locking back into the callsign.
 */
import SocialLinks from './SocialLinks.astro';

const { class: className, ...props } = Astro.props;
---

<footer class:list={["footer", className]} {...props}>
  <div class="footer__content">
    <nav class="footer__pages" aria-label="Site links">
      <a href="/notes" class="footer__page-link">Notes</a>
      <span class="footer__pipe" aria-hidden="true"></span>
      <a href="/tools" class="footer__page-link">Tools</a>
      <span class="footer__pipe" aria-hidden="true"></span>
      <a href="/build?start" class="footer__page-link">Build</a>
      <span class="footer__pipe" aria-hidden="true"></span>
      <a href="/hire" class="footer__page-link">Hire</a>
      <span class="footer__pipe" aria-hidden="true"></span>
      <a href="/subscribe" class="footer__page-link">Subscribe</a>
    </nav>
    <div class="footer__bottom">
      <div class="footer__left">
        <span class="footer__mark" data-footer-scramble>CH47</span>
        <span class="footer__text">
          Built by
          <a href="https://x.com/ctrlswing" target="_blank" rel="noopener" class="footer__link">@ctrlswing</a>.
          2026.
        </span>
      </div>
      <nav class="footer__socials" aria-label="Social links">
        <SocialLinks />
      </nav>
    </div>
  </div>
</footer>

<script>
  const GLYPHS = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789▓▒░█▀▄';
  const TARGET = 'CH47';

  function scrambleMark(mark: HTMLElement) {
    const locked: boolean[] = new Array(TARGET.length).fill(false);
    let frame: number;

    // Scramble unlocked characters
    function tick() {
      let text = '';
      for (let i = 0; i < TARGET.length; i++) {
        text += locked[i] ? TARGET[i] : GLYPHS[Math.floor(Math.random() * GLYPHS.length)];
      }
      mark.textContent = text;
      if (!locked.every(Boolean)) frame = requestAnimationFrame(tick);
    }

    frame = requestAnimationFrame(tick);
    mark.classList.add('is-scrambling');

    // Lock each character with staggered timing
    const indices = [0, 1, 2, 3].sort(() => Math.random() - 0.5);
    indices.forEach((charIdx, order) => {
      setTimeout(() => {
        locked[charIdx] = true;
        if (locked.every(Boolean)) {
          cancelAnimationFrame(frame);
          mark.textContent = TARGET;
          mark.classList.remove('is-scrambling');
        }
      }, 120 + order * 100);
    });
  }

  function initFooterScramble() {
    const mark = document.querySelector('[data-footer-scramble]') as HTMLElement;
    if (!mark || mark.hasAttribute('data-initialized')) return;
    mark.setAttribute('data-initialized', 'true');

    let cooldown = false;
    mark.addEventListener('mouseenter', () => {
      if (cooldown) return;
      if (window.matchMedia('(prefers-reduced-motion: reduce)').matches) return;
      cooldown = true;
      scrambleMark(mark);
      setTimeout(() => { cooldown = false; }, 800);
    });
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initFooterScramble);
  } else {
    initFooterScramble();
  }

  document.addEventListener('astro:page-load', initFooterScramble);
</script>

<style>
  .footer {
    border-top: 1px solid var(--color-border);
    padding: 0 clamp(24px, 5vw, 64px);
  }

  .footer__content {
    font-family: var(--font-mono);
    font-size: 12px;
    color: var(--color-fg-muted);
  }

  /* Page links — top row */
  .footer__pages {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 20px 0;
    border-bottom: 1px solid var(--color-border);
    flex-wrap: wrap;
  }

  .footer__page-link {
    font-family: var(--font-mono);
    font-size: 12px;
    color: var(--color-fg-muted);
    text-decoration: none;
    letter-spacing: 0.03em;
    transition: color var(--duration-fast) var(--ease-out);
  }

  .footer__page-link:hover {
    color: var(--color-accent);
    text-decoration: none;
  }

  .footer__pipe {
    width: 1px;
    height: 12px;
    background: var(--color-border);
    flex-shrink: 0;
  }

  /* Bottom row — attribution + socials */
  .footer__bottom {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 16px;
    padding: 20px 0;
  }

  .footer__left {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .footer__socials :global(.social-links__link) {
    font-size: 12px;
  }

  @media (max-width: 640px) {
    .footer__pages {
      gap: 8px;
    }

    .footer__pipe {
      display: none;
    }

    .footer__page-link {
      font-size: 11px;
    }

    .footer__bottom {
      flex-direction: column;
      align-items: flex-start;
      gap: 12px;
    }
  }

  .footer__mark {
    font-weight: 600;
    color: var(--color-fg-subtle);
    letter-spacing: 0.1em;
    cursor: default;
    transition: color var(--duration-fast) var(--ease-sharp);
  }

  .footer__mark:hover {
    color: var(--color-accent);
  }

  /* Scramble active — accent color + subtle glow */
  .footer__mark:global(.is-scrambling) {
    color: var(--color-accent);
    text-shadow: 0 0 6px rgba(245, 158, 11, 0.25);
  }

  .footer__link {
    color: var(--color-fg-muted);
    text-decoration: none;
    transition: color var(--duration-fast) var(--ease-out);
  }

  .footer__link:hover {
    color: var(--color-accent);
    text-decoration: none;
  }
</style>
