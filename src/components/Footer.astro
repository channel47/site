---
/**
 * Footer â€” minimal pipe-separated links + attribution.
 */

const links = [
  { href: '/plugins', label: 'Plugins' },
  { href: '/build', label: 'Build' },
  { href: '/notes', label: 'Notes' },
  { href: '/subscribe', label: 'Subscribe' },
  { href: '/privacy', label: 'Privacy' },
];

const linkClass = 'footer__link text-stone tracking-wide hover:text-signal transition-colors duration-100 focus-visible:ring-2 focus-visible:ring-signal focus-visible:ring-offset-2 focus-visible:ring-offset-void rounded-tight';
---

<footer class="footer">
  <div class="footer__inner">
    <nav class="footer__nav" aria-label="Site links">
      {links.map((link, i) => (
        <>
          <a href={link.href} class={linkClass}>{link.label}</a>
          {i < links.length - 1 && <span class="footer__pipe" aria-hidden="true"></span>}
        </>
      ))}
    </nav>
    <span class="footer__attr">Built by <a href="https://x.com/ctrlswing" target="_blank" rel="noopener noreferrer" class="text-stone hover:text-signal transition-colors duration-100">jackson</a></span>
  </div>
</footer>

<style>
  .footer {
    padding: 48px 0 32px;
  }
  .footer__inner {
    max-width: 1060px;
    margin: 0 auto;
    padding: 0 clamp(24px, 5vw, 64px);
    font-family: var(--font-family-mono);
    font-size: 12px;
    color: var(--color-stone);
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 16px;
  }
  .footer__nav {
    display: flex;
    align-items: center;
    gap: 12px;
  }
  .footer__pipe {
    width: 1px;
    height: 12px;
    background: var(--color-ash);
    flex-shrink: 0;
  }
  .footer__attr {
    white-space: nowrap;
  }

  @media (max-width: 640px) {
    .footer__inner {
      flex-direction: column;
      align-items: center;
      gap: 20px;
    }
    .footer__nav {
      justify-content: center;
      flex-wrap: wrap;
      gap: 8px 12px;
    }
    .footer__pipe {
      display: none;
    }
  }
</style>
