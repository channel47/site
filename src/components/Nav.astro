---
import LogoAnimated from './LogoAnimated.astro';
---

<nav
  class="fixed top-0 inset-x-0 z-[100] flex items-center justify-center bg-void/70 backdrop-blur-[12px] transition-transform duration-[400ms]"
  style="transition-timing-function: cubic-bezier(0.16, 1, 0.3, 1);"
  data-nav
  aria-label="Main navigation"
>
  <div class="w-full max-w-[1060px] flex items-center justify-between px-[clamp(24px,5vw,64px)] py-4">
    <a href="/" class="inline-flex focus-visible:ring-2 focus-visible:ring-signal focus-visible:ring-offset-2 focus-visible:ring-offset-void rounded-tight" aria-label="Channel 47 home">
      <LogoAnimated />
    </a>
    <div class="flex items-center gap-3">
      <a href="/plugins" class="font-mono text-[11px] font-medium uppercase tracking-[0.12em] text-stone hover:text-signal transition-colors duration-100 hidden sm:inline focus-visible:ring-2 focus-visible:ring-signal focus-visible:ring-offset-2 focus-visible:ring-offset-void rounded-tight">Plugins</a>
      <span class="w-px h-3 bg-ash shrink-0 hidden sm:block" aria-hidden="true"></span>
      <a href="/tools" class="font-mono text-[11px] font-medium uppercase tracking-[0.12em] text-stone hover:text-signal transition-colors duration-100 hidden sm:inline focus-visible:ring-2 focus-visible:ring-signal focus-visible:ring-offset-2 focus-visible:ring-offset-void rounded-tight">Build</a>
      <span class="w-px h-3 bg-ash shrink-0 hidden sm:block" aria-hidden="true"></span>
      <a href="/subscribe" class="font-mono text-[11px] font-medium uppercase tracking-[0.12em] text-stone hover:text-signal transition-colors duration-100 focus-visible:ring-2 focus-visible:ring-signal focus-visible:ring-offset-2 focus-visible:ring-offset-void rounded-tight">Subscribe</a>
    </div>
  </div>
</nav>

<style>
  .nav--hidden {
    transform: translateY(-100%);
  }
</style>
