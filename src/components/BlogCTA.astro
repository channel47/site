---
/**
 * BlogCTA Component
 *
 * Contextual product CTA for blog posts.
 * Shows relevant product based on post tags.
 */

interface Props {
  tags?: string[];
  class?: string;
}

const { tags = [], class: className } = Astro.props;

// Product recommendations based on tags
const products = {
  'google-ads': {
    title: 'Want to go deeper?',
    description: 'Set up the Google Ads MCP server with 47 GAQL queries, audit workflows, and failure checklists.',
    href: '/tools/google-ads',
    cta: 'Get Google Ads Tools',
    price: 'Free',
  },
  'mcp': {
    title: 'Ready to connect?',
    description: 'Set up the free Google Ads MCP server and start querying your accounts in minutes.',
    href: '/tools/google-ads',
    cta: 'Setup Guide',
    price: 'Free',
  },
  'creative': {
    title: 'Generate ad creatives',
    description: 'AI image generation with platform specs baked in. Powered by Google Gemini.',
    href: '/tools/creative-designer',
    cta: 'Try Creative Designer',
    price: 'Free',
  },
  'default': {
    title: 'Explore Channel47 Tools',
    description: 'Open-source MCP servers and Claude Code plugins for marketers.',
    href: '/tools',
    cta: 'Browse Tools',
    price: null,
  },
};

// Determine which product to show based on tags
function getProduct(tags: string[]) {
  const normalizedTags = tags.map(t => t.toLowerCase());

  if (normalizedTags.some(t => t.includes('google') || t.includes('ads') || t.includes('ppc') || t.includes('gaql'))) {
    return products['google-ads'];
  }
  if (normalizedTags.some(t => t.includes('creative') || t.includes('image') || t.includes('design'))) {
    return products['creative'];
  }
  if (normalizedTags.some(t => t.includes('mcp') || t.includes('tool') || t.includes('setup'))) {
    return products['mcp'];
  }
  return products['default'];
}

const product = getProduct(tags);
---

<aside class:list={['blog-cta', className]}>
  <div class="blog-cta__content">
    <h3 class="blog-cta__title">{product.title}</h3>
    <p class="blog-cta__description">{product.description}</p>
  </div>
  <div class="blog-cta__action">
    <a href={product.href} class="blog-cta__link">
      {product.cta}
      {product.price && <span class="blog-cta__price">{product.price}</span>}
      <span class="blog-cta__arrow">â†’</span>
    </a>
  </div>
</aside>

<style>
