---
/**
 * Button Component
 *
 * A versatile button component with multiple variants and sizes.
 * Optimized for mobile with minimum 48px touch targets.
 */

interface Props {
  variant?: 'primary' | 'secondary' | 'ghost' | 'outline';
  size?: 'sm' | 'md' | 'lg';
  href?: string;
  class?: string;
  type?: 'button' | 'submit' | 'reset';
  disabled?: boolean;
  fullWidth?: boolean;
}

const {
  variant = 'primary',
  size = 'md',
  href,
  class: className,
  type = 'button',
  disabled = false,
  fullWidth = false,
} = Astro.props;

const Tag = href ? 'a' : 'button';
const classes = [
  'btn',
  `btn--${variant}`,
  `btn--${size}`,
  fullWidth && 'btn--full-width',
  className,
].filter(Boolean).join(' ');
---

<Tag
  class={classes}
  href={href}
  type={!href ? type : undefined}
  disabled={disabled}
>
  <slot />
</Tag>

<style>
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    font-family: var(--font-sans);
    font-weight: var(--font-semibold);
    text-decoration: none;
    border-radius: var(--radius-lg);
    transition:
      background-color var(--duration-fast) var(--ease-out),
      color var(--duration-fast) var(--ease-out),
      border-color var(--duration-fast) var(--ease-out),
      box-shadow var(--duration-fast) var(--ease-out),
      transform var(--duration-fast) var(--ease-out),
      opacity var(--duration-fast) var(--ease-out);
    cursor: pointer;
    /* Minimum touch target */
    min-height: 48px;
    /* Prevent text selection on double-tap */
    -webkit-user-select: none;
    user-select: none;
    /* Prevent tap highlight on mobile */
    -webkit-tap-highlight-color: transparent;
    /* Better text rendering */
    text-rendering: optimizeLegibility;
    -webkit-font-smoothing: antialiased;
  }

  .btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
    pointer-events: none;
  }

  /* Active state feedback for mobile */
  .btn:active:not(:disabled) {
    transform: scale(0.97);
  }

  /* Full width modifier */
  .btn--full-width {
    width: 100%;
  }

  /* Sizes - all maintain 48px minimum height for touch */
  .btn--sm {
    font-size: var(--text-sm);
    padding: var(--space-2) var(--space-4);
    min-height: 44px;
    border-radius: var(--radius-md);
  }

  .btn--md {
    font-size: var(--text-base);
    padding: var(--space-3) var(--space-6);
  }

  .btn--lg {
    font-size: var(--text-base);
    padding: var(--space-4) var(--space-8);
    min-height: 56px;
    font-weight: var(--font-bold);
  }

  /* Variants */
  .btn--primary {
    background-color: var(--color-accent);
    color: var(--color-fg-inverse);
    border: 2px solid var(--color-accent);
    box-shadow: 0 1px 2px oklch(0% 0 0 / 0.1);
  }

  .btn--primary:hover:not(:disabled) {
    background-color: var(--color-accent-hover);
    border-color: var(--color-accent-hover);
    box-shadow: 0 2px 8px oklch(70% 0.15 30 / 0.3);
  }

  .btn--primary:focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
    box-shadow: 0 0 0 4px var(--color-accent-subtle);
  }

  .btn--primary:active:not(:disabled) {
    box-shadow: 0 1px 2px oklch(0% 0 0 / 0.1);
  }

  .btn--secondary {
    background-color: var(--color-bg-elevated);
    color: var(--color-fg);
    border: 2px solid var(--color-border);
  }

  .btn--secondary:hover:not(:disabled) {
    background-color: var(--color-bg-hover);
    border-color: var(--color-fg-muted);
  }

  .btn--secondary:focus-visible {
    outline: 2px solid var(--color-fg-muted);
    outline-offset: 2px;
  }

  .btn--outline {
    background-color: transparent;
    color: var(--color-accent);
    border: 2px solid var(--color-accent);
  }

  .btn--outline:hover:not(:disabled) {
    background-color: var(--color-accent);
    color: var(--color-fg-inverse);
  }

  .btn--outline:focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
    box-shadow: 0 0 0 4px var(--color-accent-subtle);
  }

  .btn--ghost {
    background-color: transparent;
    color: var(--color-fg-secondary);
    border: 2px solid transparent;
  }

  .btn--ghost:hover:not(:disabled) {
    background-color: var(--color-bg-elevated);
    color: var(--color-fg);
  }

  .btn--ghost:focus-visible {
    outline: 2px solid var(--color-fg-muted);
    outline-offset: 2px;
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .btn {
      transition: none;
    }

    .btn:active:not(:disabled) {
      transform: none;
    }
  }
</style>
