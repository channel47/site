---
/**
 * Card Component
 *
 * Flexible base card for general content.
 * Design: Clean, minimal, adaptable.
 */

interface Props {
  href?: string;
  class?: string;
  variant?: 'default' | 'elevated' | 'ghost';
}

const { href, class: className, variant = 'default' } = Astro.props;

const Tag = href ? 'a' : 'div';
---

<Tag
  class:list={[
    'card',
    `card--${variant}`,
    { 'card--interactive': !!href },
    className,
  ]}
  href={href}
>
  <slot />
</Tag>

<style>
  .card {
    display: block;
    padding: var(--space-5);
    border-radius: var(--radius-xl);
    -webkit-tap-highlight-color: transparent;
    transition:
      transform var(--duration-fast) var(--ease-out),
      border-color var(--duration-fast) var(--ease-out);
  }

  @media (min-width: 640px) {
    .card {
      padding: var(--space-6);
    }
  }

  /* Variants */
  .card--default {
    background: var(--color-bg-elevated);
    border: 1px solid var(--color-border-subtle);
  }

  .card--elevated {
    background: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    box-shadow: var(--shadow-sm);
  }

  .card--ghost {
    background: transparent;
    border: 1px solid var(--color-border-subtle);
  }

  /* Interactive state */
  .card--interactive {
    text-decoration: none;
    color: inherit;
    cursor: pointer;
  }

  .card--interactive:hover {
    transform: translateY(-2px);
    border-color: var(--color-border);
  }

  .card--interactive:active {
    transform: scale(0.98);
  }

  .card--interactive:focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
  }

  /* Slot content styling */
  .card :global(.card__title) {
    font-family: var(--font-sans);
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
    color: var(--color-fg);
    margin: 0 0 var(--space-2) 0;
    line-height: var(--leading-tight);
  }

  @media (min-width: 640px) {
    .card :global(.card__title) {
      font-size: var(--text-xl);
    }
  }

  .card :global(.card__description) {
    font-family: var(--font-sans);
    font-size: var(--text-sm);
    color: var(--color-fg-secondary);
    line-height: var(--leading-relaxed);
    margin: 0;
  }

  .card :global(.card__meta) {
    font-family: var(--font-sans);
    font-size: var(--text-xs);
    color: var(--color-fg-muted);
    margin-top: var(--space-4);
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .card {
      transition: none;
    }

    .card--interactive:hover,
    .card--interactive:active {
      transform: none;
    }
  }
</style>
