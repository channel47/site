---
/**
 * StickyBuyBar Component
 *
 * Fixed bottom bar that appears when user scrolls past hero.
 * Shows product name, price, and buy CTA.
 * Used on sales pages to keep purchase option always visible.
 */

interface Props {
  productName: string;
  price: string;
  href: string;
  buttonText?: string;
  class?: string;
}

const {
  productName,
  price,
  href,
  buttonText = 'Get the Skills',
  class: className,
} = Astro.props;
---

<div class:list={['sticky-buy-bar', className]} id="sticky-buy-bar" data-hidden="true">
  <div class="sticky-buy-bar__container">
    <div class="sticky-buy-bar__info">
      <span class="sticky-buy-bar__name">{productName}</span>
      <span class="sticky-buy-bar__price">{price}</span>
    </div>
    <a href={href} class="sticky-buy-bar__button">
      {buttonText}
    </a>
  </div>
</div>

<script>
  // Show/hide sticky bar based on hero visibility
  const stickyBar = document.getElementById('sticky-buy-bar');
  const hero = document.querySelector('.hero');

  if (stickyBar && hero) {
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          // Show bar when hero is NOT intersecting (scrolled past)
          if (entry.isIntersecting) {
            stickyBar.setAttribute('data-hidden', 'true');
          } else {
            stickyBar.setAttribute('data-hidden', 'false');
          }
        });
      },
      {
        threshold: 0,
        rootMargin: '-100px 0px 0px 0px', // Trigger slightly before hero fully exits
      }
    );

    observer.observe(hero);
  }
</script>

<style>
  .sticky-buy-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: var(--z-sticky);
    background-color: var(--color-bg);
    border-top: 1px solid var(--color-border);
    padding: var(--space-3) var(--space-4);
    transform: translateY(100%);
    transition: transform var(--duration-normal) var(--ease-out);
    /* Safe area for notched devices */
    padding-bottom: calc(var(--space-3) + var(--safe-area-inset-bottom));
  }

  .sticky-buy-bar[data-hidden="false"] {
    transform: translateY(0);
  }

  @media (min-width: 768px) {
    .sticky-buy-bar {
      padding: var(--space-4) var(--space-6);
    }
  }

  .sticky-buy-bar__container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-4);
    max-width: var(--container-lg);
    margin: 0 auto;
  }

  .sticky-buy-bar__info {
    display: flex;
    align-items: baseline;
    gap: var(--space-3);
    min-width: 0; /* Allow text truncation */
  }

  .sticky-buy-bar__name {
    font-family: var(--font-sans);
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    color: var(--color-fg);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  @media (min-width: 768px) {
    .sticky-buy-bar__name {
      font-size: var(--text-base);
    }
  }

  .sticky-buy-bar__price {
    font-family: var(--font-sans);
    font-size: var(--text-lg);
    font-weight: var(--font-bold);
    color: var(--color-fg);
    flex-shrink: 0;
  }

  @media (min-width: 768px) {
    .sticky-buy-bar__price {
      font-size: var(--text-xl);
    }
  }

  .sticky-buy-bar__button {
    flex-shrink: 0;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-3) var(--space-5);
    font-family: var(--font-sans);
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    color: var(--color-fg-inverse);
    background-color: var(--color-accent);
    border-radius: var(--radius-lg);
    text-decoration: none;
    min-height: 44px;
    -webkit-tap-highlight-color: transparent;
    transition:
      background-color var(--duration-fast) var(--ease-out),
      transform var(--duration-fast) var(--ease-out);
  }

  .sticky-buy-bar__button:hover {
    background-color: var(--color-accent-hover);
  }

  .sticky-buy-bar__button:active {
    transform: scale(0.97);
  }

  @media (min-width: 768px) {
    .sticky-buy-bar__button {
      padding: var(--space-3) var(--space-6);
      font-size: var(--text-base);
      min-height: 48px;
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .sticky-buy-bar {
      transition: none;
    }

    .sticky-buy-bar__button {
      transition: none;
    }

    .sticky-buy-bar__button:active {
      transform: none;
    }
  }
</style>
