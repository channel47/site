---
/**
 * NewsletterPosts Component
 *
 * Displays recent newsletter posts from beehiiv.
 * Used on the homepage to showcase latest content.
 */

import { getRecentPosts, timestampToDate, formatDate } from '../lib/beehiiv';
import Card from './Card.astro';

interface Props {
  count?: number;
}

const { count = 3 } = Astro.props;

// Fetch recent posts
let posts: Awaited<ReturnType<typeof getRecentPosts>> = [];
let hasError = false;

try {
  posts = await getRecentPosts(count);
} catch (e) {
  console.error('Failed to fetch recent newsletter posts:', e);
  hasError = true;
}
---

{!hasError && posts.length > 0 && (
  <section class="newsletter-posts" data-animate="fade-up">
    <div class="newsletter-posts__header">
      <h2 class="newsletter-posts__title">Latest from the newsletter</h2>
      <a href="/blog" class="newsletter-posts__link">View all &rarr;</a>
    </div>

    <div class="newsletter-posts__grid">
      {posts.map((post) => (
        <Card href={`/blog/${post.slug}`} variant="ghost">
          <time class="card__date" datetime={timestampToDate(post.displayed_date).toISOString()}>
            {formatDate(timestampToDate(post.displayed_date))}
          </time>
          <h3 class="card__title">{post.title}</h3>
          {post.subtitle && (
            <p class="card__description">{post.subtitle}</p>
          )}
        </Card>
      ))}
    </div>
  </section>
)}

<style>
  .newsletter-posts {
    padding: 0 var(--space-4);
    max-width: var(--container-lg);
    margin: 0 auto var(--space-10);
    width: 100%;
  }

  @media (min-width: 768px) {
    .newsletter-posts {
      padding: 0 var(--space-8);
      margin-bottom: var(--space-16);
    }
  }

  .newsletter-posts__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: var(--space-6);
    gap: var(--space-4);
  }

  .newsletter-posts__title {
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
    color: var(--color-fg);
    margin: 0;
  }

  @media (min-width: 768px) {
    .newsletter-posts__title {
      font-size: var(--text-xl);
    }
  }

  .newsletter-posts__link {
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    color: var(--color-fg-secondary);
    text-decoration: none;
    white-space: nowrap;
  }

  .newsletter-posts__link:hover {
    color: var(--color-accent);
    text-decoration: underline;
  }

  .newsletter-posts__grid {
    display: grid;
    gap: var(--space-4);
  }

  @media (min-width: 640px) {
    .newsletter-posts__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-5);
    }
  }

  @media (min-width: 1024px) {
    .newsletter-posts__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .card__date {
    display: block;
    font-size: var(--text-xs);
    color: var(--color-fg-muted);
    margin-bottom: var(--space-2);
  }

  .card__title {
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    line-height: var(--leading-snug);
    margin-bottom: var(--space-2);
  }

  .card__description {
    font-size: var(--text-sm);
    color: var(--color-fg-secondary);
    line-height: var(--leading-relaxed);
  }
</style>
