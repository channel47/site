---
interface BreadcrumbItem {
  label: string;
  href?: string;
}

interface Props {
  items: BreadcrumbItem[];
}

const { items } = Astro.props;
---

<nav aria-label="Breadcrumb" class="font-mono text-xs text-stone mb-6">
  <ol class="flex items-center gap-1.5 list-none p-0 m-0">
    {items.map((item, i) => (
      <li class="flex items-center gap-1.5">
        {i > 0 && <span aria-hidden="true" class="text-ash">&gt;</span>}
        {item.href ? (
          <a href={item.href} class="text-stone hover:text-signal transition-colors duration-100 focus-visible:ring-2 focus-visible:ring-signal focus-visible:ring-offset-2 focus-visible:ring-offset-void rounded-tight">{item.label}</a>
        ) : (
          <span class="text-ash">{item.label}</span>
        )}
      </li>
    ))}
  </ol>
</nav>
