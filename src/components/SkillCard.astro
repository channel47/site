---
/**
 * SkillCard Component
 *
 * Card for displaying skills with a slightly premium feel.
 * Nearly identical to ToolCard but with subtle refinements:
 * accent-colored CTA and gentle glow on hover.
 */

interface Props {
  title: string;
  description: string;
  href: string;
  category: string;
  tier: 'free' | 'premium';
  price?: number;
  featured?: boolean;
  class?: string;
}

const {
  title,
  description,
  href,
  category,
  tier,
  price,
  featured = false,
  class: className,
} = Astro.props;

const categoryLabels: Record<string, string> = {
  'google-ads': 'Google Ads',
  'analytics': 'Analytics',
  'automation': 'Automation',
  'reporting': 'Reporting',
  'optimization': 'Optimization',
  'creative': 'Creative',
  'other': 'Other',
};
---

<a
  href={href}
  class:list={[
    'skill-card',
    { 'skill-card--featured': featured },
    className,
  ]}
>
  <span class:list={['skill-card__badge', `skill-card__badge--${tier}`]}>
    {tier === 'free' ? 'Free' : price ? `$${price}` : 'Premium'}
  </span>

  <span class="skill-card__label">{categoryLabels[category] || category}</span>

  <h3 class="skill-card__title">{title}</h3>
  <p class="skill-card__description">{description}</p>

  <div class="skill-card__footer">
    <span class="skill-card__cta">
      {tier === 'free' ? 'Get skill' : 'View details'}
      <span class="skill-card__arrow" aria-hidden="true">â†’</span>
    </span>
  </div>
</a>

<style>
  .skill-card {
    position: relative;
    display: flex;
    flex-direction: column;
    padding: var(--space-5);
    background: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    text-decoration: none;
    color: inherit;
    cursor: pointer;
    overflow: hidden;
    -webkit-tap-highlight-color: transparent;
    transition:
      transform var(--duration-fast) var(--ease-out),
      border-color var(--duration-fast) var(--ease-out),
      box-shadow var(--duration-fast) var(--ease-out);
  }

  @media (min-width: 640px) {
    .skill-card {
      padding: var(--space-6);
    }
  }

  .skill-card:hover {
    transform: translateY(-2px);
    border-color: var(--color-accent);
    box-shadow: 0 4px 20px oklch(0% 0 0 / 0.12);
  }

  .skill-card:active {
    transform: scale(0.98);
  }

  .skill-card:focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
  }

  .skill-card--featured {
    border-color: oklch(from var(--color-accent) l c h / 0.4);
  }

  /* Badge - positioned in top-right corner */
  .skill-card__badge {
    position: absolute;
    top: 0;
    right: 0;
    font-family: var(--font-sans);
    font-size: var(--text-xs);
    font-weight: var(--font-semibold);
    padding: var(--space-2) var(--space-3);
    border-bottom-left-radius: var(--radius-lg);
  }

  .skill-card__badge--free {
    background: oklch(from var(--color-success) l c h / 0.15);
    color: var(--color-success);
  }

  .skill-card__badge--premium {
    background: oklch(from var(--color-accent) l c h / 0.15);
    color: var(--color-accent);
  }

  /* Label */
  .skill-card__label {
    font-family: var(--font-sans);
    font-size: var(--text-xs);
    font-weight: var(--font-medium);
    color: var(--color-fg-muted);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
    margin-bottom: var(--space-3);
  }

  /* Content */
  .skill-card__title {
    font-family: var(--font-sans);
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
    color: var(--color-fg);
    margin: 0 0 var(--space-2) 0;
    line-height: var(--leading-tight);
  }

  @media (min-width: 640px) {
    .skill-card__title {
      font-size: var(--text-xl);
    }
  }

  .skill-card__description {
    font-family: var(--font-sans);
    font-size: var(--text-sm);
    color: var(--color-fg-secondary);
    line-height: var(--leading-relaxed);
    margin: 0;
    flex: 1;
  }

  /* Footer */
  .skill-card__footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: var(--space-4);
    margin-top: var(--space-4);
    border-top: 1px solid var(--color-border-subtle);
  }

  .skill-card__cta {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-family: var(--font-sans);
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    color: var(--color-accent);
  }

  .skill-card__arrow {
    transition: transform var(--duration-fast) var(--ease-out);
  }

  .skill-card:hover .skill-card__arrow {
    transform: translateX(3px);
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .skill-card,
    .skill-card__arrow {
      transition: none;
    }

    .skill-card:hover,
    .skill-card:active {
      transform: none;
    }

    .skill-card:hover .skill-card__arrow {
      transform: none;
    }
  }
</style>
